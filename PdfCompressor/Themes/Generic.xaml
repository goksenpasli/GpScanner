<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:local="clr-namespace:PdfCompressor" xmlns:mozjpeg="clr-namespace:MozJpeg;assembly=MozJpeg">
    <Extensions:SystemFileIconConverter x:Key="SystemFileIconConverter" />
    <Style TargetType="{x:Type local:Compressor}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Compressor}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="{Binding LoadedPdfPath, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Button Grid.Column="1" Command="{Binding OpenFile, RelativeSource={RelativeSource TemplatedParent}}">
                                <Image Width="24" Height="24">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="3" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                            </Button>
                            <UniformGrid Grid.Row="1" Grid.Column="0"
                                Rows="2">
                                <Slider AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Maximum="4800"
                                    Minimum="12" SmallChange="1"
                                    Style="{DynamicResource Slider}"
                                    Ticks="12,24,36,48,72,96,120,150,200,300,450,600,1200,2400,4800"
                                    Value="{Binding Dpi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource TemplatedParent}}" />
                                <Slider AutoToolTipPlacement="TopLeft" LargeChange="1" Maximum="100"
                                    Minimum="1" SmallChange="1"
                                    Style="{DynamicResource Slider}"
                                    Value="{Binding Quality, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource TemplatedParent}}" />
                            </UniformGrid>
                            <Button Grid.Row="1" Grid.Column="1"
                                Command="{Binding CompressFile, RelativeSource={RelativeSource TemplatedParent}}">
                                <Image Width="24" Height="24">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Zipfldr.dll" />
                                            <Binding Source="0" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                            </Button>
                            <UniformGrid Grid.Row="2" Grid.ColumnSpan="2"
                                Columns="2">
                                <CheckBox VerticalAlignment="Center" VerticalContentAlignment="Center"
                                    Content="MOZJPEG"
                                    IsChecked="{Binding UseMozJpeg, RelativeSource={RelativeSource TemplatedParent}}"
                                    IsEnabled="{Binding Source={x:Static mozjpeg:MozJpeg.MozJpegDllExists}}" />
                                <ProgressBar Height="16"
                                    Maximum="1" Minimum="0"
                                    Value="{Binding CompressionProgress, RelativeSource={RelativeSource TemplatedParent}}" />
                            </UniformGrid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>