<Window x:Class="GpScanner.DocumentViewerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GpScanner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pdf="clr-namespace:PdfViewer;assembly=PdfViewer"
    xmlns:viewmodel="clr-namespace:GpScanner.ViewModel"
    Title="{Binding Title, TargetNullValue=''}"
    Width="800" Height="600"
    d:DataContext="{d:DesignInstance Type=viewmodel:DocumentViewerModel}"
    ContentRendered="Window_ContentRendered" UseLayoutRounding="True" WindowStartupLocation="CenterOwner"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button Command="{Binding Back}"
            Content="ç" FontFamily="Wingdings" FontSize="16" />
        <pdf:PdfViewer x:Name="pdfviewer"
            Grid.Column="1"
            Orientation="Height"
            PdfFilePath="{Binding PdfFilePath}"
            PrintButtonVisibility="Visible" ScrollBarVisible="Hidden" SnapTick="True" />
        <Button Grid.Column="2"
            Command="{Binding Forward}"
            Content="è" FontFamily="Wingdings" FontSize="16" />
    </Grid>
</Window>