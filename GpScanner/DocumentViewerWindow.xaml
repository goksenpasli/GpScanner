<Window x:Class="GpScanner.DocumentViewerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GpScanner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pdf="clr-namespace:PdfViewer;assembly=PdfViewer"
    Title="{Binding ElementName=pdfviewer, Path=PdfFilePath}"
    Width="800" Height="600"
    UseLayoutRounding="True" WindowStartupLocation="CenterOwner" WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <pdf:PdfViewer x:Name="pdfviewer"
            Orientation="Height" PrintButtonVisibility="Visible" ScrollBarVisible="Hidden"
            SnapTick="True" />
    </Grid>
</Window>