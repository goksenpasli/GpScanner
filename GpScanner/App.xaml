<Application x:Class="GpScanner.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Extensions.Controls;assembly=Extensions"
    xmlns:Converter="clr-namespace:GpScanner.Converter"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:PdfViewer="clr-namespace:PdfViewer;assembly=PdfViewer"
    xmlns:ViewModel="clr-namespace:GpScanner.ViewModel"
    xmlns:ice="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:local="clr-namespace:GpScanner" xmlns:properties="clr-namespace:GpScanner.Properties"
    xmlns:tesseract="clr-namespace:Ocr;assembly=Ocr"
    xmlns:twain="clr-namespace:TwainControl;assembly=TwainControl"
    Startup="Application_Startup" StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Extensions;component/Themes/Skin.xaml" />
                <ResourceDictionary Source="/PdfViewer;component/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Extensions:NullableToBooleanConverter x:Key="NullableToBooleanConverter" />
            <Extensions:SystemFileIconConverter x:Key="SystemFileIconConverter" />
            <Extensions:FilePathToIconConverter x:Key="FilePathToIconConverter" />
            <Converter:FilePathCheckConverter x:Key="FilePathCheckConverter" />
            <Converter:FileNameExtractConverter x:Key="FileNameExtractConverter" />
            <LinearGradientBrush x:Key="BorderBackground" ice:Freeze="True" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop ice:Freeze="True" Offset="0" Color="#FFFDFEFF" />
                <GradientStop ice:Freeze="True" Offset="1" Color="#FFC1D3EA" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="GroupBoxBackGround" ice:Freeze="True" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop ice:Freeze="True" Offset="1" Color="#FE00B6E8" />
                <GradientStop ice:Freeze="True" Color="#FF48F3CA" />
            </LinearGradientBrush>
            <Style TargetType="{x:Type GroupBox}">
                <Setter Property="Background" Value="{StaticResource GroupBoxBackGround}" />
                <Setter Property="BorderBrush" Value="Black" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type GroupBox}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1" CornerRadius="3,3,0,0">
                                    <ContentPresenter Margin="4"
                                        ContentSource="Header" RecognizesAccessKey="True" />
                                </Border>
                                <Border Grid.Row="1"
                                    Background="{StaticResource BorderBackground}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,0,1,1" CornerRadius="0,0,1,1">
                                    <ContentPresenter Margin="1" />
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <DrawingBrush x:Key="Dur"
                ice:Freeze="True" Stretch="Uniform">
                <DrawingBrush.Drawing>
                    <DrawingGroup>
                        <GeometryDrawing ice:Freeze="True" Brush="Black"
                            Geometry="F1 M 5.27184,18L 0,12.7282L 0,5.27184L 5.27184,1.90735e-006L 12.7282,1.90735e-006L 18,5.27184L 18,12.7282L 12.7282,18L 5.27184,18 Z " />
                        <GeometryDrawing ice:Freeze="True" Brush="White"
                            Geometry="F1 M 5.38416,17.7293L 0.26928,12.6158L 0.26928,5.38416L 5.38416,0.269283L 12.6158,0.270723L 17.7293,5.38416L 17.7293,12.6158L 12.6158,17.7293L 5.38416,17.7293 Z " />
                        <GeometryDrawing ice:Freeze="True" Brush="Red"
                            Geometry="F1 M 0.684,12.4445L 0.684,5.55552L 5.55552,0.684002L 12.4445,0.684002L 17.316,5.55552L 17.316,12.4445L 12.4445,17.316L 5.55552,17.316L 0.684,12.4445 Z " />
                        <GeometryDrawing ice:Freeze="True" Brush="White"
                            Geometry="F1 M 1.55447,11.6578L 1.55447,6.52443L 3.39926,6.52443C 5.2494,6.52443 6.17447,7.35859 6.17447,9.02693C 6.17447,9.82596 5.922,10.4642 5.41707,10.9416C 4.91214,11.419 4.23954,11.6578 3.39926,11.6578L 1.55447,11.6578 Z M 2.7278,7.47776L 2.7278,10.7044L 3.3053,10.7044C 3.81176,10.7044 4.20879,10.5553 4.4964,10.257C 4.784,9.95868 4.9278,9.55287 4.9278,9.03953C 4.9278,8.55446 4.78515,8.1729 4.49983,7.89485C 4.21452,7.61679 3.81405,7.47776 3.29843,7.47776L 2.7278,7.47776 Z " />
                        <GeometryDrawing ice:Freeze="True" Brush="White"
                            Geometry="F1 M 11.1611,9.42568C 11.1611,10.9626 10.4416,11.7311 9.00239,11.7311C 7.606,11.7311 6.9078,10.9806 6.9078,9.47953L 6.9078,6.52443L 8.08114,6.52443L 8.08114,9.47151C 8.08114,10.2935 8.40197,10.7044 9.04364,10.7044C 9.67308,10.7044 9.9878,10.3076 9.9878,9.51391L 9.9878,6.52443L 11.1611,6.52443L 11.1611,9.42568 Z " />
                        <GeometryDrawing ice:Freeze="True" Brush="White"
                            Geometry="F1 M 16.5225,11.6578L 15.1945,11.6578L 14.4233,10.3274C 14.366,10.2259 14.3108,10.1355 14.2577,10.0565C 14.2047,9.9774 14.151,9.9096 14.0968,9.85307C 14.0425,9.79655 13.986,9.75319 13.9272,9.72302C 13.8684,9.69285 13.8046,9.67776 13.7358,9.67776L 13.4345,9.67776L 13.4345,11.6578L 12.2611,11.6578L 12.2611,6.52443L 14.0773,6.52443C 15.311,6.52443 15.9278,6.98773 15.9278,7.91432C 15.9278,8.09231 15.9009,8.25674 15.847,8.40761C 15.7932,8.55847 15.7172,8.69445 15.619,8.81552C 15.5208,8.9366 15.4022,9.04106 15.2632,9.12891C 15.1242,9.21675 14.9695,9.2855 14.7992,9.33516L 14.7992,9.35005C 14.874,9.37373 14.9466,9.4125 15.0169,9.46635C 15.0871,9.52021 15.1549,9.58323 15.2202,9.65542C 15.2856,9.7276 15.3482,9.80514 15.4082,9.88802C 15.4681,9.9709 15.5226,10.0521 15.5714,10.1315L 16.5225,11.6578 Z M 13.4345,7.40443L 13.4345,8.79776L 13.9054,8.79776C 14.1384,8.79776 14.3252,8.72787 14.4657,8.58807C 14.6093,8.44599 14.6811,8.2703 14.6811,8.06099C 14.6811,7.62328 14.4291,7.40443 13.9249,7.40443L 13.4345,7.40443 Z " />
                    </DrawingGroup>
                </DrawingBrush.Drawing>
            </DrawingBrush>
            <ControlTemplate x:Key="ValidationErrorTemplate">
                <Grid Focusable="False">
                    <Canvas x:Name="Cnv"
                        Width="18" Height="18"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Background="{StaticResource Dur}"
                        DataContext="{Binding ElementName=Adorner, Mode=OneWay}"
                        RenderTransformOrigin="0.5,0.5" UseLayoutRounding="True">
                        <Canvas.ToolTip>
                            <ToolTip Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Foreground="{x:Null}">
                                <Border Padding="4"
                                    Background="Red" BorderBrush="White" BorderThickness="1">
                                    <TextBlock Foreground="White" Text="{Binding AdornedElement.(Validation.Errors)/ErrorContent, Mode=OneWay}" />
                                </Border>
                            </ToolTip>
                        </Canvas.ToolTip>
                        <Canvas.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </Canvas.RenderTransform>
                    </Canvas>
                    <AdornedElementPlaceholder x:Name="Adorner" />
                </Grid>
                <ControlTemplate.Triggers>
                    <DataTrigger Binding="{Binding AdornedElement.(Validation.HasError), ElementName=Adorner}" Value="True">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard AutoReverse="True" RepeatBehavior="Forever" Timeline.DesiredFrameRate="2">
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Cnv" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)">
                                        <EasingDoubleKeyFrame KeyTime="0" Value="45" />
                                        <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0" />
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                    </DataTrigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
            <ControlTemplate x:Key="PdfViewerThumbTemplate" TargetType="{x:Type PdfViewer:PdfViewer}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ScrollViewer HorizontalScrollBarVisibility="{Binding ScrollBarVisible, RelativeSource={RelativeSource TemplatedParent}}" VerticalScrollBarVisibility="{Binding ScrollBarVisible, RelativeSource={RelativeSource TemplatedParent}}">
                        <Image RenderTransformOrigin="0.5,0.5" ScrollViewer.CanContentScroll="True"
                            Source="{Binding Source, RelativeSource={RelativeSource TemplatedParent}}"
                            Stretch="None">
                            <Image.LayoutTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="Pdfscale" ScaleX="{Binding Zoom, RelativeSource={RelativeSource TemplatedParent}}" ScaleY="{Binding Zoom, RelativeSource={RelativeSource TemplatedParent}}" />
                                    <RotateTransform x:Name="Pdfrotate" Angle="{Binding Angle, RelativeSource={RelativeSource TemplatedParent}}" />
                                </TransformGroup>
                            </Image.LayoutTransform>
                        </Image>
                    </ScrollViewer>
                    <ContentControl x:Name="Cnt"
                        Grid.Row="1"
                        Visibility="{Binding ToolBarVisibility, RelativeSource={RelativeSource TemplatedParent}}">
                        <StackPanel IsEnabled="{Binding Source, Converter={StaticResource NullableToBooleanConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                            Orientation="Horizontal"
                            Visibility="{Binding TifNavigasyonButtonEtkin, RelativeSource={RelativeSource TemplatedParent}}">
                            <Extensions:ContentToggleButton Command="{Binding ScrollToCurrentPage, RelativeSource={RelativeSource TemplatedParent}}" CommandParameter="{Binding ElementName=Lb}">
                                <Image Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="19" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <Extensions:ContentToggleButton.OverContent>
                                    <ListBox x:Name="Lb"
                                        VerticalContentAlignment="Center"
                                        ItemTemplate="{StaticResource PdfThumbItemTemplate}"
                                        ItemsSource="{Binding Pages, RelativeSource={RelativeSource TemplatedParent}}"
                                        ScrollViewer.IsDeferredScrollingEnabled="True"
                                        SelectedItem="{Binding Sayfa, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                        VirtualizingPanel.CacheLength="3,3" VirtualizingPanel.CacheLengthUnit="Item"
                                        VirtualizingPanel.ScrollUnit="Pixel" VirtualizingPanel.VirtualizationMode="Standard">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                <Setter Property="Margin" Value="1" />
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Extensions:VirtualizingWrapPanel Width="460" Height="300"
                                                    CanHorizontallyScroll="False" ItemSize="140,140" StretchItems="False" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                    </ListBox>
                                </Extensions:ContentToggleButton.OverContent>
                            </Extensions:ContentToggleButton>
                            <Extensions:NumericUpDownControl LargeChange="1"
                                Maximum="{Binding ToplamSayfa, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                Minimum="1" Orientation="Horizontal" SmallChange="1"
                                Value="{Binding Sayfa, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" />
                            <ComboBox ItemStringFormat="{}{0} Dpi"
                                ItemsSource="{Binding DpiList, RelativeSource={RelativeSource TemplatedParent}}"
                                SelectedItem="{Binding Dpi, RelativeSource={RelativeSource TemplatedParent}, StringFormat=Dpi}"
                                Visibility="{Binding DpiListVisibility, RelativeSource={RelativeSource TemplatedParent}}" />
                            <TextBlock VerticalAlignment="Center">
                                <Hyperlink Command="{Binding DataContext.ExploreFile, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                                    CommandParameter="{Binding Mode=OneWay}"
                                    TextDecorations="None">
                                    <Image Width="16" Height="16">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Shell32.dll" />
                                                <Binding Source="4" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </ContentControl>
                </Grid>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0.56" />
                    </Trigger>
                    <DataTrigger Binding="{Binding Visibility, ElementName=Cnt}" Value="Collapsed">
                        <Setter TargetName="Cnt" Property="Content" Value="{x:Null}" />
                    </DataTrigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
            <DataTemplate x:Key="PdfViewerDocumentViewerTemplateFull">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Command="{Binding DataContext.AddFileToControlPanel, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=2}}" CommandParameter="{Binding ElementName=PdfVwr, Path=Source}">
                        <Button.Content>
                            <TextBlock FontFamily="Wingdings" FontSize="16" Text="ç" />
                        </Button.Content>
                    </Button>
                    <PdfViewer:PdfViewer x:Name="PdfVwr"
                        Grid.Column="1"
                        ContextMenuVisibility="Visible" Orientation="Height"
                        PdfFilePath="{Binding Mode=OneWay}"
                        PrintButtonVisibility="Visible" ScrollBarVisible="Visible" SearchTextContentVisibility="Collapsed"
                        SeekingLowerPdfDpi="True" SnapTick="True" />
                    <UniformGrid Grid.Column="2" Rows="2">
                        <local:TranslateView ViewModel:ThumbnailTranslateViewModel.AttachedText="{Binding DataContext.PdfFileContent, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=2}}" />
                        <TextBox Background="{StaticResource BorderBackground}"
                            IsReadOnly="True"
                            Text="{Binding DataContext.OcrText, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=2}}"
                            TextWrapping="Wrap" />
                    </UniformGrid>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="PdfViewerTemplateFull">
                <Grid Margin="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <WrapPanel DataContext="{Binding Path=DataContext, ElementName=TwainCtrl}"
                        IsEnabled="{Binding PdfFilePath, Converter={StaticResource NullableToBooleanConverter}, ElementName=PdfVwr}"
                        Orientation="Horizontal">
                        <Extensions:NumericUpDownControl Maximum="{Binding ElementName=PdfVwr, Path=ToplamSayfa}"
                            Minimum="1" SmallChange="1"
                            Value="{Binding SayfaBaşlangıç, UpdateSourceTrigger=PropertyChanged}" />
                        <Extensions:NumericUpDownControl Maximum="{Binding ElementName=PdfVwr, Path=ToplamSayfa}"
                            Minimum="1" SmallChange="1"
                            Value="{Binding SayfaBitiş, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Command="{Binding ExtractPdfFile}" CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Grid}}">
                            <Image Width="16" Height="16">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="68" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                        </Button>
                        <Button Command="{Binding RemoveSelectedPage}" CommandParameter="{Binding ElementName=PdfVwr}">
                            <Image Width="16" Height="16"
                                Source="/TwainControl;component/Icons/delete.png" />
                        </Button>
                        <Button Command="{Binding ArrangePdfFile}" CommandParameter="{Binding ElementName=PdfVwr}">
                            <Image Width="16" Height="16">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="263" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                        </Button>
                        <Button BorderBrush="Cyan"
                            Command="{Binding RotateSelectedPage}"
                            CommandParameter="{Binding ElementName=PdfVwr}">
                            <Image Width="16" Height="16"
                                Source="/TwainControl;component/Icons/rotate.png" />
                        </Button>
                        <Button BorderBrush="Cyan"
                            Command="{Binding AddAllFileToControlPanel}"
                            CommandParameter="{Binding ElementName=PdfVwr, Mode=OneWay}">
                            <Button.Content>
                                <TextBlock FontFamily="Wingdings" FontSize="16" Text="ç" />
                            </Button.Content>
                        </Button>
                        <Button BorderBrush="Cyan"
                            Command="{Binding DataContext.OcrPdfThumbnailPage, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding ElementName=PdfVwr, Mode=OneWay}"
                            IsEnabled="{Binding Source={x:Static tesseract:Ocr.TesseractDataExists}}">
                            <Button.Content>
                                <Grid>
                                    <ProgressBar IsIndeterminate="{Binding DataContext.OcrIsBusy, RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Text="OCR" />
                                </Grid>
                            </Button.Content>
                        </Button>
                        <Button BorderBrush="Cyan"
                            Command="{Binding ReadPdfTag}"
                            CommandParameter="{Binding ElementName=PdfVwr, Path=PdfFilePath, Mode=OneWay}">
                            <Button.Content>
                                <TextBlock FontFamily="Wingdings 2" FontSize="16" Text="-" />
                            </Button.Content>
                        </Button>
                        <Button BorderBrush="Cyan"
                            Command="{Binding MergeSelectedImagesToPdfFile}"
                            CommandParameter="{Binding ElementName=PdfVwr, Mode=OneWay}">
                            <Button.Content>
                                <Image Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Imageres.dll" />
                                            <Binding Source="166" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                            </Button.Content>
                        </Button>
                        <Button BorderBrush="Cyan"
                            Command="{Binding PasteFileToPdfFile}"
                            CommandParameter="{Binding ElementName=PdfVwr, Mode=OneWay}">
                            <Button.Content>
                                <Image Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="260" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                            </Button.Content>
                        </Button>
                        <Extensions:NumericUpDownControl IsReadOnly="True"
                            Maximum="{Binding ElementName=PdfVwr, Path=ToplamSayfa}"
                            Minimum="0" SmallChange="1"
                            Value="{Binding PdfSplitCount, ElementName=TwainCtrl}" />
                        <Button Command="{Binding SplitPdf, ElementName=TwainCtrl}" CommandParameter="{Binding ElementName=PdfVwr}">
                            <Image Width="16" Height="16">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="96" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                        </Button>
                    </WrapPanel>
                    <PdfViewer:PdfViewer x:Name="PdfVwr"
                        Grid.Row="1"
                        AllowDrop="True" AutoFitContent="True"
                        Dpi="{Binding DefaultThumbNailDpi, Source={x:Static properties:Settings.Default}}"
                        OpenButtonVisibility="Collapsed"
                        PdfFilePath="{Binding Path=DataContext, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                        PrintButtonVisibility="Visible" ScrollBarVisible="Hidden" SnapTick="True"
                        Tag="{Binding ElementName=TwainCtrl, Mode=OneWay}"
                        Template="{StaticResource PdfViewerThumbTemplate}" />
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="ZipViewerTemplate">
                <Controls:ArchiveViewer ArchivePath="{Binding Path=DataContext, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
            </DataTemplate>
            <DataTemplate x:Key="ZipViewerTemplateFull">
                <Controls:ArchiveViewer ArchivePath="{Binding Path=DataContext, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
            </DataTemplate>
            <DataTemplate x:Key="ImgViewerTemplate">
                <Extensions:ImageViewer DecodeHeight="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                    ImageFilePath="{Binding Path=DataContext, IsAsync=True, Mode=OneWay, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                    PanoramaButtonVisibility="Collapsed" PrintButtonVisibility="Visible" />
            </DataTemplate>
            <DataTemplate x:Key="EypImgViewerTemplate">
                <twain:SimpleImageViewer Width="210" Height="297"
                    DecodeHeight="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=StackPanel}}"
                    ImageFilePath="{Binding Path=DataContext, IsAsync=True, Mode=OneWay, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                    OpenButtonVisibility="Collapsed" PanoramaButtonVisibility="Collapsed"
                    PrintButtonVisibility="Collapsed"
                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" />
            </DataTemplate>
            <DataTemplate x:Key="ImgViewerDocumentViewerTemplateFull">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Extensions:ImageViewer x:Name="ImgVwr"
                        DecodeHeight="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Grid}}"
                        ImageFilePath="{Binding Path=DataContext, IsAsync=True, Mode=OneWay, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                        PanoramaButtonVisibility="Collapsed" PrintButtonVisibility="Visible" />
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Slider LargeChange="1"
                            Maximum="{Binding ElementName=ImgVwr, Path=OriginalPixelHeight}"
                            Minimum="96" SmallChange="1"
                            Style="{StaticResource Slider}"
                            Value="{Binding ElementName=ImgVwr, Path=DecodeHeight, Delay=100}" />
                        <local:TranslateView Grid.Row="1" ViewModel:ThumbnailTranslateViewModel.AttachedText="{Binding DataContext.OcrText, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=3}}" />
                        <TextBox Grid.Row="2"
                            Background="{StaticResource BorderBackground}"
                            IsReadOnly="True"
                            Text="{Binding DataContext.OcrText, RelativeSource={RelativeSource AncestorType=Grid, AncestorLevel=3}}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="XpsViewerTemplate">
                <Controls:XpsViewer XpsDataFilePath="{Binding Path=DataContext, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
            </DataTemplate>
            <DataTemplate x:Key="VideoViewerTemplate">
                <Controls:MediaViewer Width="300" Height="300"
                    AutoPlay="False" ContextMenuVisibility="Visible" ControlVisible="Collapsed"
                    MediaDataFilePath="{Binding Path=DataContext, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
            </DataTemplate>
            <DataTemplate x:Key="VideoViewerTemplateFull">
                <Controls:MediaViewer AutoPlay="False"
                    MediaDataFilePath="{Binding Path=DataContext, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                    OsdTextVisibility="Visible" />
            </DataTemplate>
            <DataTemplate x:Key="EmptyTemplate">
                <TextBlock Width="210"
                    Text="{Binding Mode=OneWay}"
                    TextWrapping="Wrap" />
            </DataTemplate>
            <DataTemplate x:Key="EypSimplePdfTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center">
                        <Hyperlink BaselineAlignment="Center"
                            Command="{Binding Path=DataContext.EypPdfSeçiliDosyaSil, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding Mode=OneWay}"
                            TextDecorations="None">
                            <Image Width="16" Height="16"
                                Source="/TwainControl;component/Icons/delete.png" />
                        </Hyperlink>
                    </TextBlock>
                    <twain:SimplePdfViewer Grid.Row="1"
                        Width="210" Height="297"
                        AutoFitContent="True"
                        Dpi="{Binding DefaultThumbNailDpi, Source={x:Static properties:Settings.Default}}"
                        DpiListVisibility="Collapsed" OpenButtonVisibility="Collapsed"
                        PdfFilePath="{Binding Path=DataContext, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                        PrintButtonVisibility="Collapsed" ScrollBarVisible="Hidden" SliderZoomAngleVisibility="Collapsed"
                        SnapTick="True"
                        Tag="{Binding RelativeSource={RelativeSource AncestorType=twain:TwainCtrl}}"
                        ToolBarVisibility="Collapsed" />
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="XmlViewerTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center">
                        <Hyperlink BaselineAlignment="Center"
                            Command="{Binding Path=DataContext.EypPdfSeçiliDosyaSil, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding Mode=OneWay}"
                            TextDecorations="None">
                            <Image Width="16" Height="16"
                                Source="/TwainControl;component/Icons/delete.png" />
                        </Hyperlink>
                    </TextBlock>
                    <twain:SimpleXmlViewer Grid.Row="1"
                        Width="210" Height="297"
                        twain:XmlViewerControlModel.XmlContent="{Binding Path=DataContext, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                        Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" />
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="XmlViewerThumbTemplate">
                <twain:XmlViewerControl Grid.Row="1" twain:XmlViewerControlModel.XmlContent="{Binding Path=DataContext, Converter={StaticResource FilePathCheckConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
            </DataTemplate>
            <Style x:Key="ListBoxItemTemplate" TargetType="{x:Type ListBoxItem}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border Padding="{TemplateBinding Control.Padding}"
                                Background="{TemplateBinding Panel.Background}"
                                BorderBrush="{TemplateBinding Border.BorderBrush}"
                                BorderThickness="{TemplateBinding Border.BorderThickness}"
                                SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
                                    Content="{TemplateBinding ContentControl.Content}"
                                    ContentStringFormat="{TemplateBinding ContentControl.ContentStringFormat}"
                                    ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}"
                                    SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource BorderBackground}" />
                        <Setter Property="BorderBrush" Value="{StaticResource GroupBoxBackGround}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <ViewModel:ViewerTemplateSelector x:Key="DocumentViewerSelector"
                Img="{StaticResource ImgViewerDocumentViewerTemplateFull}"
                Pdf="{StaticResource PdfViewerDocumentViewerTemplateFull}"
                Vid="{StaticResource VideoViewerTemplateFull}"
                Xml="{StaticResource XmlViewerThumbTemplate}"
                Xps="{StaticResource XpsViewerTemplate}"
                Zip="{StaticResource ZipViewerTemplateFull}" />
            <ViewModel:ViewerTemplateSelector x:Key="ThumbViewerSelector"
                Img="{StaticResource ImgViewerTemplate}"
                Pdf="{StaticResource PdfViewerTemplateFull}"
                Xml="{StaticResource XmlViewerThumbTemplate}"
                Xps="{StaticResource XpsViewerTemplate}"
                Zip="{StaticResource ZipViewerTemplate}" />
            <ViewModel:ViewerTemplateSelector x:Key="PdfEypViewerSelector"
                Empty="{StaticResource EmptyTemplate}"
                Img="{StaticResource EypImgViewerTemplate}"
                Pdf="{StaticResource EypSimplePdfTemplate}"
                Vid="{StaticResource VideoViewerTemplate}"
                Xml="{StaticResource XmlViewerTemplate}"
                Xps="{StaticResource XpsViewerTemplate}"
                Zip="{StaticResource ZipViewerTemplate}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>