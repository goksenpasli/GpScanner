<UserControl x:Class="TwainControl.PdfImportViewerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:Pdfviewer="clr-namespace:PdfViewer;assembly=PdfViewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwainControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:TwainControl.Properties"
    d:DataContext="{d:DesignInstance Type=local:TwainCtrl}"
    d:DesignHeight="600" d:DesignWidth="420"
    local:Translation.ResourceManager="{x:Static properties:Resources.ResourceManager}"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Extensions:FilePathToIconConverter x:Key="FilePathToIconConverter" />
        <Extensions:SystemFileIconConverter x:Key="SystemFileIconConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Margin="2" Orientation="Horizontal">
            <UniformGrid Columns="5" DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                <Extensions:NumericUpDownControl Maximum="{Binding ElementName=PdfViewer, Path=ToplamSayfa}"
                    Minimum="1" SmallChange="1"
                    Value="{Binding SayfaBaşlangıç, UpdateSourceTrigger=PropertyChanged}" />
                <Extensions:NumericUpDownControl Maximum="{Binding ElementName=PdfViewer, Path=ToplamSayfa}"
                    Minimum="1" SmallChange="1"
                    Value="{Binding SayfaBitiş, UpdateSourceTrigger=PropertyChanged}" />
                <Button Command="{Binding ExtractPdfFile}" CommandParameter="{Binding PdfFilePath, ElementName=PdfViewer, Mode=OneWay}">
                    <Image Width="16" Height="16">
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                <Binding Source="Shell32.dll" />
                                <Binding Source="68" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                </Button>
                <Button Command="{Binding RemoveSelectedPage}" CommandParameter="{Binding ElementName=PdfViewer}">
                    <Image Width="16" Height="16">
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                <Binding Source="Shell32.dll" />
                                <Binding Source="131" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                </Button>
                <Button BorderBrush="Cyan"
                    Command="{Binding RotateSelectedPage}"
                    CommandParameter="{Binding ElementName=PdfViewer}">
                    <Image Width="16" Height="16"
                        Source="/TwainControl;component/Icons/rotate.png" />
                </Button>
            </UniformGrid>
            <Button BorderBrush="Cyan" Command="{Binding DataContext.AddAllFileToControlPanel, RelativeSource={RelativeSource AncestorType=Window}}">
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource CloneConverter}">
                        <Binding Mode="OneWay" Path="DataContext" />
                        <Binding ElementName="PdfViewer" Mode="OneWay" />
                    </MultiBinding>
                </Button.CommandParameter>
                <Button.Content>
                    <TextBlock FontFamily="Wingdings" FontSize="16" Text="ç" />
                </Button.Content>
            </Button>
            <Button Command="{Binding DataContext.OcrPdfThumbnailPage, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding ElementName=PdfViewer, Mode=OneWay}">
                <Button.Content>
                    <Grid>
                        <ProgressBar IsIndeterminate="{Binding DataContext.OcrIsBusy, RelativeSource={RelativeSource AncestorType=Window}}" />
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                            Text="OCR" />
                    </Grid>
                </Button.Content>
            </Button>
        </StackPanel>
        <Pdfviewer:PdfViewer x:Name="PdfViewer"
            Grid.Row="1"
            PdfFilePath="{Binding SinglePdfFilePath}"
            PrintButtonVisibility="Visible" OpenButtonVisibility="Visible" />
        <UniformGrid Grid.Row="2" Columns="2">
            <Button Command="{Binding LoadSingleEypFile}" CommandParameter="{Binding ElementName=PdfViewer, Mode=OneWay}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" Height="32"
                        Source="{Binding Source='.eyp', Converter={StaticResource FilePathToIconConverter}}" />
                    <TextBlock VerticalAlignment="Center" Text="{local:Loc FILE}" />
                </StackPanel>
            </Button>
            <Button Command="{Binding AddSinglePdfPage}" CommandParameter="{Binding ElementName=PdfViewer, Path=Source}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" Height="32">
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                <Binding Source="Shell32.dll" />
                                <Binding Source="19" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                    <TextBlock VerticalAlignment="Center" Text="{local:Loc ADDDOC}" />
                </StackPanel>
            </Button>
        </UniformGrid>
    </Grid>
</UserControl>