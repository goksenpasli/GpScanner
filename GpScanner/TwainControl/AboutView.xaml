<UserControl x:Class="TwainControl.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwainControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:TwainControl.Properties"
    d:DataContext="{d:DesignInstance Type=local:TwainCtrl}"
    d:DesignHeight="290" d:DesignWidth="400"
    local:Translation.ResourceManager="{x:Static properties:Resources.ResourceManager}"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Extensions;component/Themes/Skin.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Extensions:SystemFileIconConverter x:Key="SystemFileIconConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <GroupBox Background="{StaticResource GroupBoxBackGround}" Header="{local:Loc ABOUT}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="2,0,0,0">
                <TextBlock FontSize="20" TextWrapping="Wrap">
                    <Hyperlink local:Policy.PolicyName="WebAdreseGit"
                        Command="{Binding WebAdreseGit}"
                        CommandParameter="https://github.com/goksenpasli?tab=repositories">
                        <Run Text="{local:Loc OTHERAPPS}" />
                    </Hyperlink>
                </TextBlock>
                <Separator />
                <TextBlock FontWeight="Bold"
                    Text="{local:Loc APPDESC}"
                    TextWrapping="Wrap" />
                <TextBlock Margin="0,25,0,0"
                    Background="Red"
                    Text="{local:Loc THIRDPARTY}"
                    TextWrapping="Wrap" />
                <TextBlock>
                    <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="https://github.com/charlesw/tesseract">
                        TESSERACT
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="http://www.pdfsharp.net">
                        PDFSHARP
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="https://github.com/micjahn/ZXing.Net">
                        ZXing.Net
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="https://github.com/GMZ">
                        TWAINWPF
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="https://github.com/JosePineiro/MozJpeg-wrapper">
                        MozJpeg
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="https://bitbucket.org/jvandezande/wpfcap/src/master/">
                        WPFCap
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="https://github.com/pvginkel/PdfiumViewer">
                        PdfiumViewer
                    </Hyperlink>
                </TextBlock>
                <TextBlock>
                    <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="https://github.com/JosePineiro/WebP-wrapper">
                        WebP-Wrapper
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="210.4" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock HorizontalAlignment="Center" Text="{local:Loc ABOUT}" />
                <TextBox Grid.Row="1"
                    AcceptsReturn="True"
                    Text="{Binding MailData, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                <UniformGrid Grid.Row="2" Columns="2">
                    <Button local:Policy.PolicyName="WebAdreseGit"
                        Command="{Binding WebAdreseGit}"
                        CommandParameter="eventvwr.msc">
                        <Image Width="32" Height="32">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                    <Binding Source="miguiresource.dll" />
                                    <Binding Source="0" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                    </Button>
                    <Button local:Policy.PolicyName="SendMail" Command="{Binding SendMail}">
                        <Image Width="32" Height="32">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                    <Binding Source="Imageres.dll" />
                                    <Binding Source="15" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                    </Button>
                </UniformGrid>
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>