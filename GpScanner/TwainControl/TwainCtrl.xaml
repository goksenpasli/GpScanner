                                                        FontFamily="Wingdings" FontSize="24" FontWeight="Bold"
                                                        PreviewMouseMove="Run_PreviewMouseMove" Text="B">
                                                        <Run.Style>
                                                            <Style TargetType="Run">
                                                                <Setter Property="Foreground" Value="Red" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding DragMoveStarted, RelativeSource={RelativeSource AncestorType=local:TwainCtrl}}" Value="true">
                                                                        <DataTrigger.EnterActions>
                                                                            <BeginStoryboard x:Name="Sb">
                                                                                <Storyboard RepeatBehavior="Forever">
                                                                                    <ColorAnimation Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)" To="Blue" Duration="0:0:1" />
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </DataTrigger.EnterActions>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding DragMoveStarted, RelativeSource={RelativeSource AncestorType=local:TwainCtrl}}" Value="false">
                                                                        <DataTrigger.EnterActions>
                                                                            <RemoveStoryboard BeginStoryboardName="Sb" />
                                                                        </DataTrigger.EnterActions>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Run.Style>
