<UserControl x:Class="TwainControl.TwainCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converter="clr-namespace:TwainControl.Converter"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ice="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:local="clr-namespace:TwainControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:TwainControl.Properties"
    x:Name="UserControl"
    d:DataContext="{d:DesignInstance Type=local:TwainCtrl}"
    d:DesignHeight="800" d:DesignWidth="1024"
    local:Translation.ResourceManager="{x:Static properties:Resources.ResourceManager}"
    Loaded="UserControl_Loaded" UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TwainControl;component/Slider.xaml" />
                <ResourceDictionary Source="/Extensions;component/Themes/Skin.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <Converter:SplitConverter x:Key="SplitConverter" />
            <Extensions:NullableToBooleanConverter x:Key="NullableToBooleanConverter" />
            <Extensions:SystemFileIconConverter x:Key="SystemFileIconConverter" />
            <LinearGradientBrush x:Key="BorderBackground" ice:Freeze="True" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop ice:Freeze="True" Offset="0" Color="#FFFDFEFF" />
                <GradientStop ice:Freeze="True" Offset="1" Color="#FFC1D3EA" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="GroupBoxBackGround" ice:Freeze="True" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop ice:Freeze="True" Offset="1" Color="#FE00B6E8" />
                <GradientStop ice:Freeze="True" Color="#FF48F3CA" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding TwainGuiControlLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:Width="3*" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="{Binding DocumentGridLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:Width="5*" />
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="{local:Loc SRC}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="81.6" />
                </Grid.RowDefinitions>
                <ComboBox Grid.Row="0"
                    ItemsSource="{Binding Scanner.Tarayıcılar}"
                    SelectedItem="{Binding Scanner.SeçiliTarayıcı, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Imageres.dll" />
                                            <Binding Source="90" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="{Binding Mode=OneWay}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <GroupBox Grid.Row="1"
                    Header="{local:Loc SETTİNGS}"
                    IsEnabled="{Binding Scanner.ArayüzEtkin}">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <StackPanel VerticalAlignment="Top">
                            <StackPanel.Resources>
                                <Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="{x:Type CheckBox}">
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                </Style>
                            </StackPanel.Resources>
                            <StackPanel Orientation="Horizontal">
                                <Slider AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Maximum="600"
                                    Minimum="72" Orientation="Vertical" SmallChange="1"
                                    Style="{StaticResource Slider}"
                                    Ticks="72,96,120,150,200,300,450,600"
                                    ToolTip="{local:Loc RES}"
                                    Value="{Binding Çözünürlük, Mode=TwoWay, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}" />
                                <StackPanel Orientation="Horizontal">
                                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                                </StackPanel>
                                <CheckBox IsChecked="{Binding Adf, Mode=TwoWay, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}">
                                    <Grid>
                                        <Image Source="/TwainControl;component/adf.png" Visibility="{Binding Adf, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Text="{local:Loc ADF}" />
                                    </Grid>
                                </CheckBox>
                                <ListBox Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    SelectedIndex="{Binding Mode, Mode=TwoWay, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}">
                                    <ListBox.Resources>
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <RadioButton VerticalAlignment="Center" VerticalContentAlignment="Center"
                                                            Content="{TemplateBinding ContentPresenter.Content}"
                                                            IsChecked="{Binding IsSelected, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.Resources>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBoxItem HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="{local:Loc BW}" />
                                            <Image Width="48" Height="48"
                                                Source="/TwainControl;component/bw.png" />
                                        </StackPanel>
                                    </ListBoxItem>
                                    <ListBoxItem HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                        <StackPanel>
                                            <TextBlock HorizontalAlignment="Center" Text="{local:Loc GRAY}" />
                                            <Image Width="48" Height="48"
                                                Source="/TwainControl;component/gray.png" />
                                        </StackPanel>
                                    </ListBoxItem>
                                    <ListBoxItem HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                        <StackPanel>
                                            <TextBlock HorizontalAlignment="Center" Text="{local:Loc COLOR}" />
                                            <Image Width="48" Height="48"
                                                Source="/TwainControl;component/color.png" />
                                        </StackPanel>
                                    </ListBoxItem>
                                </ListBox>
                            </StackPanel>
                            <Separator />
                            <StackPanel>
                                <CheckBox Content="{local:Loc TWOSIDE}" IsChecked="{Binding Scanner.Duplex}" />
                                <CheckBox Content="{local:Loc GUI}" IsChecked="{Binding Scanner.ShowUi}" />
                                <CheckBox Content="{local:Loc SEPERATESCAN}"
                                    IsChecked="{Binding Scanner.SeperateSave}"
                                    IsEnabled="{Binding Scanner.AutoSave}"
                                    ToolTip="{local:Loc SEPERATESCANTOOLTIP}" />
                                <CheckBox Content="{local:Loc SHOWFILE}" IsChecked="{Binding ShowFile, Source={x:Static properties:Settings.Default}}" />
                            </StackPanel>
                            <Expander Header="{local:Loc OTHERSETTINGS}">
                                <StackPanel>
                                    <UniformGrid Columns="2">
                                        <CheckBox Content="{local:Loc DESKEW}" IsChecked="{Binding Scanner.Deskew}" />
                                        <CheckBox Content="{local:Loc BORDERDETECT}" IsChecked="{Binding Scanner.BorderDetect}" />
                                        <CheckBox Content="{local:Loc SHOWPROGRESS}" IsChecked="{Binding Scanner.ShowProgress}" />
                                        <CheckBox Content="{local:Loc AUTOROTATE}" IsChecked="{Binding Scanner.AutoRotate}" />
                                    </UniformGrid>
                                    <ComboBox SelectedIndex="{Binding Scanner.ShutDownMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="{local:Loc FASTSCANAFTER}">
                                        <ComboBoxItem Content="{local:Loc NO ACTION}" />
                                        <ComboBoxItem>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16" Height="16">
                                                    <Image.Source>
                                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                            <Binding Source="Shell32.dll" />
                                                            <Binding Source="27" />
                                                        </MultiBinding>
                                                    </Image.Source>
                                                </Image>
                                                <TextBlock VerticalAlignment="Center" Text="{local:Loc CLOSECOMP}" />
                                            </StackPanel>
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16" Height="16">
                                                    <Image.Source>
                                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                            <Binding Source="Shell32.dll" />
                                                            <Binding Source="44" />
                                                        </MultiBinding>
                                                    </Image.Source>
                                                </Image>
                                                <TextBlock VerticalAlignment="Center" Text="{local:Loc RESTARTCOMP}" />
                                            </StackPanel>
                                        </ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                            </Expander>
                            <Separator />
                            <TextBlock d:Text="AutoFolder" FontWeight="Bold">
                                <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="{Binding AutoFolder, Mode=OneWay, Source={x:Static properties:Settings.Default}}">
                                    <Run Text="{Binding Scanner.LocalizedPath, Mode=OneWay}" />
                                </Hyperlink>
                            </TextBlock>
                            <HeaderedContentControl>
                                <HeaderedContentControl.Header>
                                    <TextBlock>
                                        <Run Text="{local:Loc FILENAME}" />
                                        <Run FontWeight="Bold" Text="{Binding Scanner.SaveFileName}" />
                                    </TextBlock>
                                </HeaderedContentControl.Header>
                                <Extensions:ButtonedTextBox d:Text="FileName" GotKeyboardFocus="ButtonedTextBox_GotKeyboardFocus" MaxLength="255"
                                    Text="{Binding Scanner.FileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                                    <Extensions:ButtonedTextBox.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Command="{Binding InsertFileNamePlaceHolder}"
                                                CommandParameter="[GÜN]"
                                                Header="{local:Loc DAY}" />
                                            <MenuItem Command="{Binding InsertFileNamePlaceHolder}"
                                                CommandParameter="[AY]"
                                                Header="{local:Loc MONTH}" />
                                            <MenuItem Command="{Binding InsertFileNamePlaceHolder}"
                                                CommandParameter="[YIL]"
                                                Header="{local:Loc YEAR}" />
                                            <MenuItem Command="{Binding InsertFileNamePlaceHolder}"
                                                CommandParameter="[SAAT]"
                                                Header="{local:Loc TIME}" />
                                            <MenuItem Command="{Binding InsertFileNamePlaceHolder}"
                                                CommandParameter="[DAKİKA]"
                                                Header="{local:Loc MINUTE}" />
                                            <MenuItem Command="{Binding InsertFileNamePlaceHolder}"
                                                CommandParameter="[SANİYE]"
                                                Header="{local:Loc SECOND}" />
                                            <MenuItem Command="{Binding InsertFileNamePlaceHolder}"
                                                CommandParameter="[GUID]"
                                                Header="{local:Loc GUID}" />
                                            <MenuItem Command="{Binding InsertFileNamePlaceHolder}"
                                                CommandParameter="[USERNAME]"
                                                Header="{local:Loc USERNAME}" />
                                        </ContextMenu>
                                    </Extensions:ButtonedTextBox.ContextMenu>
                                </Extensions:ButtonedTextBox>
                            </HeaderedContentControl>
                            <UniformGrid Columns="3">
                                <TextBox VerticalContentAlignment="Center" Text="{Binding Scanner.ProfileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <Button Command="{Binding SaveProfile}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16" Height="16">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="6" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock Text="{local:Loc SAVEPROFILE}" />
                                    </StackPanel>
                                </Button>
                                <ComboBox HorizontalContentAlignment="Stretch"
                                    ItemsSource="{Binding Profile, Source={x:Static properties:Settings.Default}}"
                                    SelectedItem="{Binding Scanner.SelectedProfile}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <UniformGrid Columns="2">
                                                <TextBlock VerticalAlignment="Center" Text="{Binding Converter={StaticResource SplitConverter}, Mode=OneWay}" />
                                                <Button Background="Transparent" BorderBrush="Transparent"
                                                    Command="{Binding DataContext.RemoveProfile, ElementName=UserControl}"
                                                    CommandParameter="{Binding Mode=OneWay}"
                                                    Content="{local:Loc DELETE}"
                                                    FontWeight="Bold" Foreground="Red" />
                                            </UniformGrid>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </UniformGrid>
                            <Separator />
                            <UniformGrid Columns="3">
                                <Button Command="{Binding ScanImage}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Imageres.dll" />
                                                    <Binding Source="90" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock VerticalAlignment="Center" Text="{local:Loc SCAN}" />
                                    </StackPanel>
                                </Button>
                                <Button Background="Green" Command="{Binding FastScanImage}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="32" Height="32"
                                            ToolTip="{local:Loc WARNREBOOT}">
                                            <Image.Style>
                                                <Style TargetType="{x:Type Image}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Scanner.ShutDownMode}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="77" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Imageres.dll" />
                                                    <Binding Source="90" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock VerticalAlignment="Center" Text="{local:Loc FASTSCAN}" />
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding KayıtYoluBelirle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="4" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock VerticalAlignment="Center" Text="{local:Loc AUTOPATH}" />
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>
                <GroupBox Grid.Row="2">
                    <GroupBox.Header>
                        <UniformGrid Columns="3" Rows="2">
                            <Button Command="{Binding Tümünüİşaretle}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16" Height="16">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Imageres.dll" />
                                                    <Binding Source="248" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock VerticalAlignment="Center" Text="{local:Loc ALL}" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button Command="{Binding TümününİşaretiniKaldır}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16" Height="16">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Imageres.dll" />
                                                    <Binding Source="249" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock VerticalAlignment="Center" Text="{local:Loc NONE}" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button Command="{Binding Tersiniİşaretle}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16" Height="16">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Imageres.dll" />
                                                    <Binding Source="250" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock VerticalAlignment="Center" Text="{local:Loc REVERSE}" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Slider Margin="2,0,2,0" VerticalAlignment="Center"
                                AutoToolTipPlacement="TopLeft" Maximum="300" Minimum="85"
                                SmallChange="1"
                                Style="{StaticResource Slider}"
                                ToolTip="{local:Loc PREVIEWSIZE}"
                                Value="{Binding Path=PreviewWidth, Source={x:Static properties:Settings.Default}}" />
                            <Extensions:ContentToggleButton>
                                <Extensions:ContentToggleButton.OverContent>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16" Height="16">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="47" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock VerticalAlignment="Center" Text="{local:Loc PDFPROTECT}" />
                                    </StackPanel>
                                </Extensions:ContentToggleButton.OverContent>
                                <GroupBox>
                                    <GroupBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox VerticalAlignment="Center"
                                                Content="{local:Loc ENCRYPT}"
                                                IsChecked="{Binding Scanner.PasswordProtect}" />
                                            <Image Width="32" Height="32">
                                                <Image.Source>
                                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                        <Binding Source="Shell32.dll" />
                                                        <Binding Source="77" />
                                                    </MultiBinding>
                                                </Image.Source>
                                            </Image>
                                            <TextBlock VerticalAlignment="Center"
                                                FontSize="14"
                                                Text="{local:Loc PDFWARN}" />
                                        </StackPanel>
                                    </GroupBox.Header>
                                    <StackPanel IsEnabled="{Binding Scanner.PasswordProtect}">
                                        <HeaderedContentControl Header="{local:Loc PASSWORD}">
                                            <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" />
                                        </HeaderedContentControl>
                                        <StackPanel IsEnabled="{Binding Scanner.PdfPassword, Converter={StaticResource NullableToBooleanConverter}}">
                                            <CheckBox Content="{local:Loc ALLOWPRINT}" IsChecked="{Binding Scanner.AllowPrint}" />
                                            <CheckBox Content="{local:Loc ALLOWCOPY}" IsChecked="{Binding Scanner.AllowCopy}" />
                                            <CheckBox Content="{local:Loc ALLOWEDIT}" IsChecked="{Binding Scanner.AllowEdit}" />
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                            </Extensions:ContentToggleButton>
                        </UniformGrid>
                    </GroupBox.Header>
                    <ListBox ItemsSource="{Binding Scanner.Resimler, Mode=OneWay}"
                        SelectedItem="{Binding SeçiliResim}"
                        SelectionMode="Extended" VirtualizingPanel.CacheLengthUnit="Item"
                        VirtualizingPanel.IsVirtualizingWhenGrouping="True" VirtualizingPanel.ScrollUnit="Pixel"
                        VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Seçili}" Value="true">
                                        <Setter Property="Background" Value="MediumSeaGreen" />
                                        <Setter Property="IsSelected" Value="True" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <StackPanel Background="{TemplateBinding Background}">
                                                <TextBlock HorizontalAlignment="Center">
                                                    <Hyperlink Command="{Binding ElementName=UserControl, Path=DataContext.Kaydet}"
                                                        CommandParameter="{Binding Mode=OneWay}"
                                                        TextDecorations="None">
                                                        <Image Width="32" Height="32">
                                                            <Image.Source>
                                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                    <Binding Source="Shell32.dll" />
                                                                    <Binding Source="6" />
                                                                </MultiBinding>
                                                            </Image.Source>
                                                        </Image>
                                                    </Hyperlink>
                                                    <Hyperlink Command="{Binding ElementName=UserControl, Path=DataContext.ResimSil}"
                                                        CommandParameter="{Binding Mode=OneWay}"
                                                        FontFamily="Segoe UI Black" TextDecorations="None">
                                                        <Image Width="32" Height="32">
                                                            <Image.Source>
                                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                    <Binding Source="Shell32.dll" />
                                                                    <Binding Source="131" />
                                                                </MultiBinding>
                                                            </Image.Source>
                                                        </Image>
                                                    </Hyperlink>
                                                </TextBlock>
                                                <Viewbox Width="{Binding Path=PreviewWidth, Source={x:Static properties:Settings.Default}}">
                                                    <ToggleButton VerticalAlignment="Center" VerticalContentAlignment="Center"
                                                        Background="Transparent"
                                                        BorderBrush="{x:Null}"
                                                        IsChecked="{Binding Seçili}">
                                                        <Image Width="{Binding Resim.Thumbnail.Width, Mode=OneWay}"
                                                            Height="{Binding Resim.Thumbnail.Height, Mode=OneWay}"
                                                            d:Source="/TwainControl;component/bw.png" RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                            Source="{Binding Resim.Thumbnail, Mode=OneWay}" />
                                                    </ToggleButton>
                                                </Viewbox>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Extensions:VirtualizingWrapPanel CanHorizontallyScroll="False" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </GroupBox>
                <UniformGrid Grid.Row="3"
                    Columns="2" FirstColumn="1" Rows="3">
                    <Extensions:SplitButton Command="{Binding LoadImage}" PlacementMode="Top">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="24" Height="24">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="139" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Text="{local:Loc FILE}" />
                        </StackPanel>
                        <Extensions:SplitButton.InternalContent>
                            <GroupBox Header="{local:Loc RES}">
                                <Slider Width="100"
                                    AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Maximum="600"
                                    Minimum="72" SmallChange="1"
                                    Style="{StaticResource Slider}"
                                    Ticks="72,96,120,150,200,300,450,600"
                                    ToolTip="{local:Loc RES}"
                                    Value="{Binding ImgLoadResolution, UpdateSourceTrigger=PropertyChanged}" />
                            </GroupBox>
                        </Extensions:SplitButton.InternalContent>
                    </Extensions:SplitButton>
                    <Button Command="{Binding Seçilikaydet}">
                        <StackPanel Orientation="Horizontal">
                            <Canvas Width="24" Height="24">
                                <Image Width="24" Height="24">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="6" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock d:Text="0" FontSize="9" Foreground="Red"
                                    Text="{Binding Scanner.SeçiliResimSayısı}" />
                            </Canvas>
                            <TextBlock VerticalAlignment="Center" Text="{local:Loc SAVESELECTED}" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding PdfBirleştir}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="24" Height="24">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="68" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Text="{local:Loc MERGEPDF}" />
                        </StackPanel>
                    </Button>
                    <Button Background="Red" Command="{Binding ListeTemizle}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="24" Height="24">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="131" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Text="{local:Loc CLEARLIST}" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding WebAdreseGit}" CommandParameter="https://github.com/goksenpasli">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="24" Height="24">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="14" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Text="{local:Loc ABOUT}" />
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </Grid>
        </GroupBox>
        <GridSplitter Grid.Column="1"
            Width="3"
            HorizontalAlignment="Stretch"
            Background="{StaticResource GroupBoxBackGround}"
            MouseDoubleClick="GridSplitter_MouseDoubleClick" />
        <GroupBox Grid.Column="2"
            Margin="1,0,0,0" Panel.ZIndex="-1"
            Header="{local:Loc DOCUMENT}">
            <Grid IsEnabled="{Binding SeçiliResim, Converter={StaticResource NullableToBooleanConverter}}">
                <DockPanel>
                    <Slider Margin="20,0,20,0"
                        DockPanel.Dock="Top" IsSnapToTickEnabled="True"
                        Maximum="{Binding SeçiliResim.Resim.PixelWidth}"
                        Style="{StaticResource SliderStyle}"
                        TickPlacement="BottomRight"
                        Value="{Binding Scanner.CropLeft}" />
                    <Slider Margin="20,0,20,0"
                        DockPanel.Dock="Bottom" IsDirectionReversed="True" IsSnapToTickEnabled="True"
                        Maximum="{Binding SeçiliResim.Resim.PixelWidth}"
                        Style="{StaticResource SliderStyle}"
                        TickPlacement="TopLeft"
                        Value="{Binding Scanner.CropRight}" />
                    <Slider Margin="0,-6,0,20"
                        DockPanel.Dock="Left" IsDirectionReversed="True" IsSnapToTickEnabled="True"
                        Maximum="{Binding SeçiliResim.Resim.PixelHeight}"
                        Orientation="Vertical"
                        Style="{StaticResource SliderStyle}"
                        TickPlacement="BottomRight"
                        Value="{Binding Scanner.CropTop}" />
                    <Slider Margin="0,0,0,20"
                        DockPanel.Dock="Right" IsSnapToTickEnabled="True"
                        Maximum="{Binding SeçiliResim.Resim.PixelHeight}"
                        Orientation="Vertical"
                        Style="{StaticResource SliderStyle}"
                        TickPlacement="TopLeft"
                        Value="{Binding Scanner.CropBottom}" />
                    <Grid Panel.ZIndex="-1">
                        <Extensions:ImageViewer x:Name="ImgViewer"
                            Angle="{Binding Scanner.RotateAngle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            FitImageOrientation="Height" OrijinalResimDosyaAçButtonVisibility="Collapsed"
                            PreviewMouseDown="ImgViewer_MouseDown" PreviewMouseMove="ImgViewer_MouseMove" SnapTick="True"
                            Source="{Binding SeçiliResim.Resim}" />
                        <Canvas x:Name="cnv" />
                    </Grid>
                </DockPanel>
                <Expander Height="540"
                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    ExpandDirection="Up"
                    IsExpanded="{Binding Scanner.CropDialogExpanded}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Border Background="{StaticResource BorderBackground}"
                            BorderBrush="{StaticResource GroupBoxBackGround}"
                            BorderThickness="1" CornerRadius="1">
                            <StackPanel>
                                <DockPanel>
                                    <Extensions:NumericUpDownControl HorizontalAlignment="Center"
                                        DockPanel.Dock="Top" IsReadOnly="True"
                                        Maximum="{Binding SeçiliResim.Resim.PixelHeight}"
                                        Minimum="0" SmallChange="1"
                                        Value="{Binding Scanner.CropTop}" />
                                    <Extensions:NumericUpDownControl HorizontalAlignment="Center"
                                        DockPanel.Dock="Bottom" IsReadOnly="True"
                                        Maximum="{Binding SeçiliResim.Resim.PixelHeight}"
                                        Minimum="0" SmallChange="1"
                                        Value="{Binding Scanner.CropBottom}" />
                                    <Extensions:NumericUpDownControl VerticalAlignment="Center"
                                        DockPanel.Dock="Left" IsReadOnly="True"
                                        Maximum="{Binding SeçiliResim.Resim.PixelWidth}"
                                        Minimum="0" SmallChange="1"
                                        Value="{Binding Scanner.CropLeft}" />
                                    <Extensions:NumericUpDownControl VerticalAlignment="Center"
                                        DockPanel.Dock="Right" IsReadOnly="True"
                                        Maximum="{Binding SeçiliResim.Resim.PixelWidth}"
                                        Minimum="0" SmallChange="1"
                                        Value="{Binding Scanner.CropRight}" />
                                    <Grid>
                                        <Border BorderBrush="{StaticResource GroupBoxBackGround}" BorderThickness="1">
                                            <Grid x:Name="LineGrid"
                                                Width="105" Height="149"
                                                ShowGridLines="True">
                                                <Grid.Background>
                                                    <ImageBrush ImageSource="{Binding Scanner.CroppedImage}" />
                                                </Grid.Background>
                                            </Grid>
                                        </Border>
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                            FontFamily="Webdings" FontSize="20" Foreground="Red"
                                            Text="N">
                                            <TextBlock.ToolTip>
                                                <Image Source="{Binding Scanner.CroppedImage}" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </Grid>
                                </DockPanel>
                                <Extensions:NumericUpDownControl Margin="-16,0,0,0"
                                    IsReadOnly="True" Maximum="1" Minimum="0"
                                    NumericUpdownTextBoxVisibility="Collapsed" Orientation="Horizontal" SmallChange="1"
                                    Value="{Binding Scanner.CroppedImageAngle}" />
                                <Button Background="Green" Command="{Binding LoadCroppedImage}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="1" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock VerticalAlignment="Center" Text="{local:Loc PREVIEWFILE}" />
                                    </StackPanel>
                                </Button>
                                <UniformGrid Margin="1"
                                    Columns="2" Rows="12">
                                    <TextBlock VerticalAlignment="Center" Text="{local:Loc WIDTHCOUNT}" />
                                    <Extensions:NumericUpDownControl Maximum="{Binding SeçiliResim.Resim.PixelWidth}"
                                        Minimum="1" SmallChange="1"
                                        Value="{Binding Scanner.EnAdet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock VerticalAlignment="Center" Text="{local:Loc HEIGHTCOUNT}" />
                                    <Extensions:NumericUpDownControl Maximum="{Binding SeçiliResim.Resim.PixelHeight}"
                                        Minimum="1" SmallChange="1"
                                        Value="{Binding Scanner.BoyAdet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock />
                                    <Button Command="{Binding SplitImage}" Content="{local:Loc SLICE}" />
                                    <TextBlock VerticalAlignment="Center" Text="{local:Loc TEXT}" />
                                    <TextBox Text="{Binding Scanner.Watermark, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock VerticalAlignment="Center" Text="{local:Loc TEXTSIZE}" />
                                    <Slider AutoToolTipPlacement="TopLeft" Maximum="1024" Minimum="12"
                                        SmallChange="1"
                                        Style="{StaticResource Slider}"
                                        Value="{Binding Scanner.WatermarkTextSize}" />
                                    <TextBlock VerticalAlignment="Center" Text="{local:Loc TEXTANGLE}" />
                                    <Slider AutoToolTipPlacement="TopLeft" Maximum="360" Minimum="0"
                                        SmallChange="1"
                                        Style="{StaticResource Slider}"
                                        Value="{Binding Scanner.WatermarkAngle}" />
                                    <TextBlock VerticalAlignment="Center" Text="{local:Loc FONT}" />
                                    <ComboBox ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}" SelectedItem="{Binding Scanner.WatermarkFont}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock FontFamily="{Binding Mode=OneWay}" Text="{Binding Mode=OneWay}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>
                                    </ComboBox>
                                    <Button Command="{Binding SetWatermark}" Content="{local:Loc DRAWTEXT}" />
                                    <Button Command="{Binding DeskewImage}" Content="{local:Loc DESKEW}" />
                                    <Button Command="{Binding OcrPage}"
                                        CommandParameter="{Binding Scanner.CroppedImage}"
                                        Content="{local:Loc OCR}" />
                                    <Button Command="{Binding ResetCroppedImage}" Content="{local:Loc RESET}" />
                                    <TextBlock VerticalAlignment="Center" Text="{local:Loc SRCCOLOR}" />
                                    <Extensions:ContentToggleButton Background="{Binding SourceColor, Mode=OneWay}">
                                        <Extensions:ContentToggleButton.OverContent>
                                            <TextBlock Text="{Binding SourceColor, Mode=OneWay}" />
                                        </Extensions:ContentToggleButton.OverContent>
                                        <Extensions:ColorPicker Width="350" Height="250"
                                            HexCode="{Binding SourceColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            PredefinedColorVisibility="Visible" />
                                    </Extensions:ContentToggleButton>
                                    <TextBlock VerticalAlignment="Center" Text="{local:Loc DSTCOLOR}" />
                                    <Extensions:ContentToggleButton Background="{Binding TargetColor, Mode=OneWay}">
                                        <Extensions:ContentToggleButton.OverContent>
                                            <TextBlock Text="{Binding TargetColor, Mode=OneWay}" />
                                        </Extensions:ContentToggleButton.OverContent>
                                        <Extensions:ColorPicker Width="350" Height="250"
                                            HexCode="{Binding TargetColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            PredefinedColorVisibility="Visible" />
                                    </Extensions:ContentToggleButton>
                                    <UniformGrid Columns="2">
                                        <Slider VerticalAlignment="Center"
                                            IsEnabled="{Binding ElementName=BtnApply, Path=IsEnabled}"
                                            Maximum="255" Minimum="1"
                                            Style="{StaticResource Slider}"
                                            Value="{Binding Scanner.Threshold, Delay=300}" />
                                        <Button x:Name="BtnApply"
                                            Command="{Binding ApplyColorChange}"
                                            Content="{local:Loc APPLY}"
                                            ToolTip="{local:Loc COLORCHANGETIP}" />
                                    </UniformGrid>
                                    <Button Command="{Binding SaveImage}"
                                        CommandParameter="{Binding Scanner.CroppedImage}"
                                        Content="{local:Loc SAVEPDF}" />
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </ScrollViewer>
                </Expander>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>