<UserControl x:Name="UserControl"
    x:Class="TwainControl.TwainCtrl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwainControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:TwainControl.Properties"
    d:DataContext="{d:DesignInstance Type=local:TwainCtrl}"
    d:DesignHeight="600" d:DesignWidth="800" Loaded="UserControl_Loaded"
    UseLayoutRounding="True" mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Extensions:SystemFileIconConverter x:Key="SystemFileIconConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="KAYNAK SEÇ">
            <Grid IsEnabled="{Binding Scanner.ArayüzEtkin}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ComboBox Grid.Row="0" ItemsSource="{Binding Scanner.Tarayıcılar}" SelectedItem="{Binding Scanner.SeçiliTarayıcı, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Imageres.dll" />
                                            <Binding Source="90" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="{Binding Mode=OneWay}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <GroupBox Grid.Row="1" Header="AYARLAR">
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="CheckBox">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                            </Style>
                        </StackPanel.Resources>
                        <Slider AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Maximum="600"
                            Minimum="72" SmallChange="1" Ticks="72,96,120,150,200,300,450,600"
                            ToolTip="ÇÖZÜNÜRLÜK"
                            Value="{Binding Path=Çözünürlük, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}" />
                        <Slider AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Maximum="255"
                            Minimum="1" SmallChange="1" ToolTip="SİYAH BEYAZ EŞİK DEĞERİ"
                            Value="{Binding Scanner.Eşik, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <CheckBox IsChecked="{Binding Path=Adf, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}">
                            <CheckBox.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Text="BESLEYİCİ" />
                                    <Image Source="/TwainControl;component/adf.png" Visibility="{Binding Path=Adf, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}" />
                                </StackPanel>
                            </CheckBox.Content>
                        </CheckBox>
                        <ListBox Background="{x:Null}" BorderBrush="{x:Null}" SelectedIndex="{Binding Path=Mode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}">
                            <ListBox.Resources>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <RadioButton VerticalAlignment="Center" VerticalContentAlignment="Center"
                                                    Content="{TemplateBinding ContentPresenter.Content}"
                                                    IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.Resources>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBoxItem HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                <StackPanel>
                                    <TextBlock Text="SİYAH BEYAZ" />
                                    <Image Width="48" Height="48" Source="/TwainControl;component/bw.png" />
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Text="GRİ" />
                                    <Image Width="48" Height="48" Source="/TwainControl;component/gray.png" />
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Text="RENKLİ" />
                                    <Image Width="48" Height="48" Source="/TwainControl;component/color.png" />
                                </StackPanel>
                            </ListBoxItem>
                        </ListBox>
                        <CheckBox Content="İKİ YÖNLÜ TARAMA" IsChecked="{Binding Scanner.Duplex}" />
                        <CheckBox Content="ARAYÜZ GÖSTER" IsChecked="{Binding Scanner.ShowUi}" />
                        <CheckBox Content="HER SAYFAYI AYRI TARA"
                            IsChecked="{Binding Scanner.SeperateSave}"
                            IsEnabled="{Binding Scanner.AutoSave}"
                            ToolTip="Her Sayfayı Ayrı Dosyaya Kaydet Dosyalar Aşağıda Belirtilen Klasöre Kaydedilir." />
                        <CheckBox Content="HIZLI TARAMA SONRASI DOSYAYI GÖSTER" IsChecked="{Binding Path=ShowFile, Source={x:Static properties:Settings.Default}}" />
                        <CheckBox Content="HIZLI TARAMADA KLASÖRÜ TARİHE GÖRE GRUPLA" IsChecked="{Binding Path=DateGroupFolder, Source={x:Static properties:Settings.Default}}" />
                        <Expander Header="DİĞER AYARLAR">
                            <StackPanel>
                                <CheckBox Content="EĞRİLİK DÜZELT" IsChecked="{Binding Scanner.Deskew}" />
                                <CheckBox Content="OTOMATİK KENAR TESPİTİ" IsChecked="{Binding Scanner.BorderDetect}" />
                                <CheckBox Content="YÜZDE GÖSTER" IsChecked="{Binding Scanner.ShowProgress}" />
                                <CheckBox Content="OTOMATİK DÖNDÜR" IsChecked="{Binding Scanner.AutoRotate}" />
                            </StackPanel>
                        </Expander>
                        <TextBlock d:Text="AutoFolder" FontWeight="Bold">
                            <Hyperlink Command="{Binding WebAdreseGit}" CommandParameter="{Binding Path=AutoFolder, Mode=OneWay, Source={x:Static properties:Settings.Default}}">
                                <Run Text="{Binding Path=AutoFolder, Mode=OneWay, Source={x:Static properties:Settings.Default}}" />
                            </Hyperlink>
                        </TextBlock>
                        <HeaderedContentControl Header="DOSYA ADI">
                            <Extensions:ButtonedTextBox d:Text="FileName" MaxLength="255"
                                Text="{Binding Scanner.FileName, ValidatesOnDataErrors=True, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}" />
                        </HeaderedContentControl>
                        <Button Command="{Binding KayıtYoluBelirle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="4" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="OTOMATİK KAYIT YOLU BELİRLE" />
                            </StackPanel>
                        </Button>
                        <UniformGrid Columns="2">
                            <Button Command="{Binding ScanImage}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="32" Height="32">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Imageres.dll" />
                                                <Binding Source="90" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock VerticalAlignment="Center" Text="TARA" />
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding FastScanImage}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="32" Height="32">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Imageres.dll" />
                                                <Binding Source="90" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock VerticalAlignment="Center" Text="HIZLI TARA" />
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </StackPanel>
                </GroupBox>
                <ListBox Grid.Row="2"
                    Extensions:ListBoxHelper.SelectedItems="{Binding Scanner.SeçiliResimler}"
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    ItemsSource="{Binding Scanner.Resimler, Mode=OneWay}"
                    SelectedItem="{Binding Scanner.SeçiliResim}"
                    SelectionMode="Extended">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Right">
                                    <Hyperlink Command="{Binding ElementName=UserControl, Path=DataContext.Kaydet}" CommandParameter="{Binding Mode=OneWay}">
                                        <Run Text="KAYDET" />
                                    </Hyperlink>
                                    <Hyperlink Command="{Binding ElementName=UserControl, Path=DataContext.ResimSil}" CommandParameter="{Binding Mode=OneWay}" FontFamily="Segoe UI Black">
                                        <Run Text="X" />
                                    </Hyperlink>
                                </TextBlock>
                                <Grid>
                                    <CheckBox x:Name="Cb"
                                        VerticalAlignment="Center" VerticalContentAlignment="Center"
                                        Command="{Binding ElementName=UserControl, Path=DataContext.GetImageIndex}"
                                        CommandParameter="{Binding Mode=OneWay, RelativeSource={RelativeSource Mode=Self}}"
                                        IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}">
                                        <Image Width="63" Height="89" RenderOptions.BitmapScalingMode="NearestNeighbor"
                                            Source="{Binding Thumbnail, Mode=OneWay}" />
                                    </CheckBox>
                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16"
                                        FontWeight="Bold" Foreground="Red"
                                        Text="{Binding ElementName=Cb, Path=Tag}" />
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="2" />
                            <Setter Property="BorderBrush" Value="MediumSeaGreen" />
                            <Setter Property="BorderThickness" Value="2" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Extensions:VirtualizingWrapPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
                <UniformGrid Grid.Row="3" Columns="2" Rows="2">
                    <Button Command="{Binding Tümünükaydet}" Content="TÜMÜNÜ PDF KAYDET" />
                    <Button Command="{Binding Seçilikaydet}" Content="SEÇİLİLERİ PDF KAYDET" />
                    <Button Background="Red" Command="{Binding ListeTemizle}" Content="TARANANLARI TEMİZLE" />
                    <Button Command="{Binding WebAdreseGit}" CommandParameter="https://github.com/goksenpasli" Content="HAKKINDA" />
                </UniformGrid>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="1" Margin="1,0,0,0" Header="EVRAK">
            <Grid>
                <DockPanel>
                    <Slider Margin="23,0,23,0" DockPanel.Dock="Top" IsSnapToTickEnabled="True"
                        Maximum="{Binding Scanner.SeçiliResim.PixelWidth}"
                        TickPlacement="BottomRight"
                        Value="{Binding Scanner.CropLeft}" />
                    <Slider Margin="23,0,23,0" DockPanel.Dock="Bottom" IsDirectionReversed="True"
                        IsSnapToTickEnabled="True"
                        Maximum="{Binding Scanner.SeçiliResim.PixelWidth}"
                        TickPlacement="TopLeft"
                        Value="{Binding Scanner.CropRight}" />
                    <Slider DockPanel.Dock="Left" IsDirectionReversed="True" IsSnapToTickEnabled="True"
                        Maximum="{Binding Scanner.SeçiliResim.PixelHeight}"
                        Orientation="Vertical" TickPlacement="BottomRight"
                        Value="{Binding Scanner.CropTop}" />
                    <Slider DockPanel.Dock="Right" IsSnapToTickEnabled="True"
                        Maximum="{Binding Scanner.SeçiliResim.PixelHeight}"
                        Orientation="Vertical" TickPlacement="TopLeft"
                        Value="{Binding Scanner.CropBottom}" />
                    <Extensions:ImageViewer Grid.Column="1" OrijinalResimDosyaAçButtonVisibility="Collapsed"
                        Source="{Binding Scanner.SeçiliResim}"
                        ToolBarVisibility="Visible" />
                </DockPanel>
                <Expander HorizontalAlignment="Left" VerticalAlignment="Bottom" ExpandDirection="Up">
                    <Border Background="{StaticResource BorderBackground}"
                        BorderBrush="{StaticResource GroupBoxBackGround}"
                        BorderThickness="1" CornerRadius="1">
                        <StackPanel>
                            <DockPanel>
                                <Extensions:NumericUpDownControl HorizontalAlignment="Center" DockPanel.Dock="Top" IsReadOnly="True"
                                    Maximum="{Binding Scanner.SeçiliResim.PixelHeight}"
                                    Minimum="0" SmallChange="1"
                                    Value="{Binding Scanner.CropTop}" />
                                <Extensions:NumericUpDownControl HorizontalAlignment="Center" DockPanel.Dock="Bottom" IsReadOnly="True"
                                    Maximum="{Binding Scanner.SeçiliResim.PixelHeight}"
                                    Minimum="0" SmallChange="1"
                                    Value="{Binding Scanner.CropBottom}" />
                                <Extensions:NumericUpDownControl VerticalAlignment="Center" DockPanel.Dock="Left" IsReadOnly="True"
                                    Maximum="{Binding Scanner.SeçiliResim.PixelWidth}"
                                    Minimum="0" SmallChange="1"
                                    Value="{Binding Scanner.CropLeft}" />
                                <Extensions:NumericUpDownControl VerticalAlignment="Center" DockPanel.Dock="Right" IsReadOnly="True"
                                    Maximum="{Binding Scanner.SeçiliResim.PixelWidth}"
                                    Minimum="0" SmallChange="1"
                                    Value="{Binding Scanner.CropRight}" />
                                <Border BorderBrush="{StaticResource GroupBoxBackGround}" BorderThickness="1">
                                    <Grid x:Name="LineGrid"
                                        Width="140" Height="198" ShowGridLines="True">
                                        <Grid.Effect>
                                            <local:ColorEffect x:Name="Color" />
                                        </Grid.Effect>
                                        <Grid.Background>
                                            <ImageBrush ImageSource="{Binding Scanner.CroppedImage}" />
                                        </Grid.Background>
                                    </Grid>
                                </Border>
                            </DockPanel>
                            <UniformGrid Margin="1" Columns="2" Rows="4">
                                <Button Command="{Binding SaveCroppedImage}" Content="RESMİ KIRP" />
                                <Button Command="{Binding ResetCroppedImage}" Content="SIFIRLA" />
                                <TextBlock VerticalAlignment="Center" Text="EN ADETİ" />
                                <Extensions:NumericUpDownControl Maximum="{Binding Scanner.SeçiliResim.PixelWidth}"
                                    Minimum="1" SmallChange="1"
                                    Value="{Binding Scanner.EnAdet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock VerticalAlignment="Center" Text="BOY ADETİ" />
                                <Extensions:NumericUpDownControl Maximum="{Binding Scanner.SeçiliResim.PixelHeight}"
                                    Minimum="1" SmallChange="1"
                                    Value="{Binding Scanner.BoyAdet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <Button Command="{Binding SplitImage}" Content="PARÇALA" />
                                <Extensions:ContentToggleButton Grid.Column="11" FontFamily="Webdings" FontSize="20"
                                    OverContent="·" PlacementMode="Top">
                                    <Extensions:ContentToggleButton.Content>
                                        <GroupBox>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel.Resources>
                                                    <Style TargetType="Slider">
                                                        <Setter Property="Height" Value="64" />
                                                        <Setter Property="Orientation" Value="Vertical" />
                                                        <Setter Property="Maximum" Value="1" />
                                                        <Setter Property="Minimum" Value="0" />
                                                        <Setter Property="BorderThickness" Value="3" />
                                                    </Style>
                                                </StackPanel.Resources>
                                                <Slider BorderBrush="Red" Value="{Binding ElementName=Color, Path=Red}" />
                                                <Slider BorderBrush="Green" Value="{Binding ElementName=Color, Path=Green}" />
                                                <Slider BorderBrush="Blue" Value="{Binding ElementName=Color, Path=Blue}" />
                                                <Slider Value="{Binding ElementName=Color, Path=Brightness}">
                                                    <Slider.BorderBrush>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <GradientStop Color="Black" />
                                                            <GradientStop Offset="1" Color="White" />
                                                        </LinearGradientBrush>
                                                    </Slider.BorderBrush>
                                                </Slider>
                                                <Slider Value="{Binding ElementName=Color, Path=Contrast}">
                                                    <Slider.BorderBrush>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <GradientStop Color="White" />
                                                            <GradientStop Offset="1" Color="Black" />
                                                        </LinearGradientBrush>
                                                    </Slider.BorderBrush>
                                                </Slider>
                                            </StackPanel>
                                        </GroupBox>
                                    </Extensions:ContentToggleButton.Content>
                                </Extensions:ContentToggleButton>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </Expander>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>