                                                            ShowShadow="True"
                                                            Source="{Binding Resim.Thumbnail, IsAsync=True, Mode=OneWay}" />
                                                    </Viewbox>
                                                </ToggleButton>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
