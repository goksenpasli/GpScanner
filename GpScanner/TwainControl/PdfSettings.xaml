<UserControl x:Class="TwainControl.PdfSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwainControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mozjpeg="clr-namespace:MozJpeg;assembly=MozJpeg"
    xmlns:pdfsharpdrawing="clr-namespace:PdfSharp.Drawing;assembly=PdfSharp-wpf"
    xmlns:properties="clr-namespace:TwainControl.Properties"
    d:DataContext="{d:DesignInstance Type=local:TwainCtrl}"
    d:DesignHeight="440" d:DesignWidth="480"
    local:Translation.ResourceManager="{x:Static properties:Resources.ResourceManager}"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Extensions;component/Themes/Skin.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Extensions:FilePathToIconConverter x:Key="FilePathToIconConverter" />
            <Extensions:NullableToBooleanConverter x:Key="NullableToBooleanConverter" />
            <Extensions:SystemFileIconConverter x:Key="SystemFileIconConverter" />
            <LinearGradientBrush x:Key="Colorfull" PresentationOptions:Freeze="true" StartPoint="0,0.5" EndPoint="1,0.5">
                <GradientStop Offset="0.0" Color="Red" />
                <GradientStop Offset="0.17" Color="Orange" />
                <GradientStop Offset="0.33" Color="Yellow" />
                <GradientStop Offset="0.5" Color="Green" />
                <GradientStop Offset="0.67" Color="Blue" />
                <GradientStop Offset="0.83" Color="Indigo" />
                <GradientStop Offset="1.0" Color="Violet" />
            </LinearGradientBrush>
            <ObjectDataProvider x:Key="PdfLayout"
                MethodName="GetValues"
                ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="local:PdfPageLayout" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider x:Key="PdfColor"
                MethodName="GetValues"
                ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="pdfsharpdrawing:XKnownColor" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </UserControl.Resources>
    <GroupBox Background="{StaticResource GroupBoxBackGround}">
        <GroupBox.Header>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox VerticalAlignment="Center"
                        Content="{local:Loc ENCRYPT}"
                        IsChecked="{Binding Scanner.PasswordProtect}" />
                    <Image Width="32" Height="32">
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                <Binding Source="Shell32.dll" />
                                <Binding Source="77" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                    <TextBlock Width="370"
                        VerticalAlignment="Center"
                        FontSize="14" FontStyle="Italic" Foreground="Red"
                        Text="{local:Loc PDFWARN}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <Separator />
                <CheckBox VerticalContentAlignment="Center"
                    Content="{local:Loc REMOVEPROCESSEDIMAGE}"
                    FontStyle="Italic" FontWeight="Bold" Foreground="Red"
                    IsChecked="{Binding RemoveProcessedImage, Source={x:Static properties:Settings.Default}}" />
            </StackPanel>
        </GroupBox.Header>
        <StackPanel>
            <HeaderedContentControl Header="{local:Loc PASSWORD}">
                <PasswordBox IsEnabled="{Binding Scanner.PasswordProtect}" PasswordChanged="PasswordBox_PasswordChanged" />
            </HeaderedContentControl>
            <UniformGrid Columns="2">
                <GroupBox>
                    <StackPanel IsEnabled="{Binding Scanner.PdfPassword, Converter={StaticResource NullableToBooleanConverter}}">
                        <CheckBox Content="{local:Loc ALLOWPRINT}" IsChecked="{Binding Scanner.AllowPrint}" />
                        <CheckBox Content="{local:Loc ALLOWCOPY}" IsChecked="{Binding Scanner.AllowCopy}" />
                        <CheckBox Content="{local:Loc ALLOWEDIT}" IsChecked="{Binding Scanner.AllowEdit}" />
                    </StackPanel>
                </GroupBox>
                <GroupBox>
                    <StackPanel>
                        <Extensions:ButtonedTextBox CopyButtonVisibility="Collapsed" OpenButtonVisibility="Collapsed"
                            Text="{Binding Scanner.UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Extensions:ButtonedTextBox CopyButtonVisibility="Collapsed" OpenButtonVisibility="Collapsed"
                            Text="{Binding Scanner.CreatorAppName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </GroupBox>
            </UniformGrid>
            <Separator />
            <HeaderedContentControl Header="{local:Loc JPEGQUALITY}">
                <Slider AutoToolTipPlacement="TopLeft" Maximum="95" Minimum="10"
                    SmallChange="1"
                    Style="{StaticResource Slider}"
                    Value="{Binding Path=JpegQuality, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}" />
            </HeaderedContentControl>
            <HeaderedContentControl Header="{local:Loc RES}">
                <Slider AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Maximum="600"
                    Minimum="72" SmallChange="1"
                    Style="{StaticResource Slider}"
                    Ticks="72,96,120,150,200,300,450,600"
                    ToolTip="{local:Loc RES}"
                    Value="{Binding Path=ImgLoadResolution, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}" />
            </HeaderedContentControl>
            <HeaderedContentControl>
                <HeaderedContentControl.Header>
                    <TextBlock>
                        <Run Text="{local:Loc BW}" />
                        <Run Text="{local:Loc SETTİNGS}" />
                    </TextBlock>
                </HeaderedContentControl.Header>
                <Slider AutoToolTipPlacement="TopLeft" IsSnapToTickEnabled="True" Maximum="255"
                    Minimum="1" SmallChange="1"
                    Style="{StaticResource Slider}"
                    ToolTip="{local:Loc BW}"
                    Value="{Binding Path=BwThreshold, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}" />
            </HeaderedContentControl>
            <Separator />
            <CheckBox IsChecked="{Binding Scanner.Deskew}">
                <CheckBox.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16"
                            Source="{Binding Source='.pdf', Converter={StaticResource FilePathToIconConverter}}" />
                        <TextBlock Text="{local:Loc DESKEW}" />
                    </StackPanel>
                </CheckBox.Content>
            </CheckBox>
            <CheckBox IsChecked="{Binding Scanner.ApplyPdfSaveOcr}">
                <CheckBox.Content>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="{local:Loc FILE}" />
                        <Run Text="{local:Loc OCR}" />
                        <Run FontWeight="Bold" Foreground="Red"
                            Text="{local:Loc OCRTIME}" />
                    </TextBlock>
                </CheckBox.Content>
            </CheckBox>
            <CheckBox IsChecked="{Binding Scanner.ApplyDataBaseOcr}">
                <CheckBox.Content>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="{local:Loc ADDOCRTODB}" />
                        <Run FontWeight="Bold" Foreground="Red"
                            Text="{local:Loc ADDOCRTOOLTIP}" />
                    </TextBlock>
                </CheckBox.Content>
            </CheckBox>
            <CheckBox IsChecked="{Binding Scanner.UseMozJpegEncoding}" IsEnabled="{Binding Source={x:Static mozjpeg:MozJpeg.MozJpegDllExists}}">
                <CheckBox.Content>
                    <TextBlock FontWeight="Bold"
                        Foreground="{StaticResource Colorfull}"
                        Text="MOZJPEG" />
                </CheckBox.Content>
            </CheckBox>
            <CheckBox VerticalContentAlignment="Center" IsChecked="{Binding Scanner.PdfPageNumberDraw}">
                <CheckBox.Content>
                    <StackPanel IsEnabled="{Binding Scanner.PdfPageNumberDraw}" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="{local:Loc PAGENUMBER}" />
                        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}"
                            ItemsSource="{Binding Mode=OneWay, Source={StaticResource PdfLayout}}"
                            SelectedItem="{Binding Scanner.Layout}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="WingDings 3">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="Left">
                                                        <Setter Property="Text" Value="Å" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value="Middle">
                                                        <Setter Property="Text" Value="È" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value="Right">
                                                        <Setter Property="Text" Value="Æ" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                        <ComboBox ItemsSource="{Binding Mode=OneWay, Source={StaticResource PdfColor}}" SelectedItem="{Binding Scanner.PdfAlignTextColor}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="16" Height="16"
                                            Fill="{Binding ElementName=Tb, Path=Text}" />
                                        <TextBlock x:Name="Tb"
                                            VerticalAlignment="Center"
                                            Text="{Binding Mode=OneWay}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </CheckBox.Content>
            </CheckBox>
        </StackPanel>
    </GroupBox>
</UserControl>