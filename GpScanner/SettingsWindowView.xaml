<Window x:Class="GpScanner.SettingsWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GpScanner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:GpScanner.Properties"
    xmlns:twainctrl="clr-namespace:TwainControl;assembly=TwainControl"
    xmlns:twainproperties="clr-namespace:TwainControl.Properties;assembly=TwainControl"
    xmlns:viewmodel="clr-namespace:GpScanner.ViewModel"
    Title="GPSCANNER"
    Width="800" Height="600"
    d:DataContext="{d:DesignInstance Type=viewmodel:GpScannerViewModel}"
    twainctrl:Translation.ResourceManager="{x:Static twainproperties:Resources.ResourceManager}"
    ResizeMode="NoResize" ShowInTaskbar="False" UseLayoutRounding="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <GroupBox Header="{twainctrl:Loc SETTİNGS}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="89.6" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <ComboBox VerticalContentAlignment="Center"
                    d:SelectedValue="TÜRKÇE"
                    SelectedValue="{Binding SeçiliDil}"
                    SelectedValuePath="Tag">
                    <ComboBoxItem Tag="TÜRKÇE">
                        <ComboBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-Turkey.png" />
                                <TextBlock VerticalAlignment="Center" Text="TÜRKÇE" />
                            </StackPanel>
                        </ComboBoxItem.Content>
                    </ComboBoxItem>
                    <ComboBoxItem Tag="ENGLISH">
                        <ComboBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-United-States-of-America.png" />
                                <TextBlock VerticalAlignment="Center" Text="ENGLISH" />
                            </StackPanel>
                        </ComboBoxItem.Content>
                    </ComboBoxItem>
                    <ComboBoxItem Tag="FRANÇAIS">
                        <ComboBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-France.png" />
                                <TextBlock VerticalAlignment="Center" Text="FRANÇAIS" />
                            </StackPanel>
                        </ComboBoxItem.Content>
                    </ComboBoxItem>
                    <ComboBoxItem Tag="ITALIANO">
                        <ComboBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-Italy.png" />
                                <TextBlock VerticalAlignment="Center" Text="ITALIANO" />
                            </StackPanel>
                        </ComboBoxItem.Content>
                    </ComboBoxItem>
                    <ComboBoxItem Tag="عربي">
                        <ComboBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-Saudi-Arabia.png" />
                                <TextBlock VerticalAlignment="Center" Text="عربي" />
                            </StackPanel>
                        </ComboBoxItem.Content>
                    </ComboBoxItem>
                </ComboBox>
                <UniformGrid Grid.Row="2"
                    Columns="2" Rows="4">
                    <CheckBox VerticalAlignment="Center"
                        Content="{twainctrl:Loc QRDETECT}"
                        IsChecked="{Binding DetectBarCode}" HorizontalAlignment="Right" Width="238" />
                    <CheckBox VerticalAlignment="Center"
                        Content="{twainctrl:Loc SEPERATOR}"
                        IsChecked="{Binding DetectPageSeperator}"
                        IsEnabled="{Binding DetectBarCode}" />
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                        Text="{twainctrl:Loc FILENAME}" />
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                        Text="{twainctrl:Loc TAG}" />
                    <ComboBox IsEnabled="{Binding DetectPageSeperator}"
                        ItemsSource="{Binding PatchCodes, Source={x:Static properties:Settings.Default}}"
                        SelectedItem="{Binding PatchProfileName}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <UniformGrid Columns="2">
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Mode=OneWay}" />
                                    <Button Background="Transparent" BorderBrush="Transparent"
                                        Command="{Binding DataContext.RemovePatchProfile, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                        CommandParameter="{Binding Mode=OneWay}"
                                        Content="{twainctrl:Loc DELETE}"
                                        FontWeight="Bold" Foreground="Red" />
                                </UniformGrid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBox IsEnabled="{Binding DetectPageSeperator}" Text="{Binding PatchFileName, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox IsEnabled="{Binding DetectPageSeperator}" Text="{Binding PatchTag, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Command="{Binding SavePatchProfile}" IsEnabled="{Binding DetectPageSeperator}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="16" Height="16">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="6" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc SAVEPROFILE}" />
                        </StackPanel>
                    </Button>
                </UniformGrid>
                <UniformGrid Grid.Row="1" Columns="2">
                    <Extensions:ButtonedTextBox VerticalContentAlignment="Center"
                        IsReadOnly="True" ResetButtonVisibility="Collapsed"
                        Text="{Binding Path=DatabaseFile, Mode=OneWay, Source={x:Static properties:Settings.Default}}" />
                    <Button Command="{Binding ChangeDataFolder}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="24" Height="24">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Imageres.dll" />
                                        <Binding Source="8" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc FILE}" />
                        </StackPanel>
                    </Button>
                </UniformGrid>
                <UniformGrid Grid.Row="3" Columns="2">
                    <Button Command="{Binding RegisterSti, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Canvas Width="32" Height="32">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="sti.dll" />
                                            <Binding Source="0" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <Image Canvas.Bottom="0"
                                    Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="User32.dll" />
                                            <Binding Source="6" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                            </Canvas>
                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc REGSTI}" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding UnRegisterSti, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Canvas Width="32" Height="32">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="sti.dll" />
                                            <Binding Source="0" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="131" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <Image Canvas.Bottom="0"
                                    Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="User32.dll" />
                                            <Binding Source="6" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                            </Canvas>
                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc UNREGSTI}" />
                        </StackPanel>
                    </Button>
                </UniformGrid>
                <UniformGrid Grid.Row="4" Columns="2">
                    <TextBlock VerticalAlignment="Center" Text="PDF DPI" />
                    <ComboBox ItemStringFormat="{}{0} Dpi"
                        ItemsSource="{Binding SettingsPagePdfDpiList}"
                        SelectedItem="{Binding DefaultThumbNailDpi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}" />
                </UniformGrid>
                <GroupBox Grid.Row="5" Header="{twainctrl:Loc BATCH}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Grid.ColumnSpan="2"
                            IsReadOnly="True"
                            Text="{Binding BatchFolder}" />
                        <Button Grid.Column="2"
                            Command="{Binding SetBatchFolder}"
                            Content="{twainctrl:Loc SRC}" />
                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <ProgressBar Foreground="{Binding ProgressBarForegroundBrush}"
                                Maximum="1"
                                Value="{Binding PdfSaveProgressValue, Source={x:Static twainctrl:ToolBox.Scanner}}" />
                            <TextBox d:Text="AutoFolder"
                                Background="{x:Null}"
                                IsReadOnly="True"
                                Text="{Binding Path=AutoFolder, Mode=OneWay, Source={x:Static twainproperties:Settings.Default}}" />
                        </Grid>
                        <Button Grid.Row="1" Grid.Column="2"
                            Command="{Binding StartBatch}"
                            Content="{twainctrl:Loc START}" />
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="6">
                    <Extensions:GraphControl Series="{Binding ChartData}" />
                </GroupBox>
            </Grid>
        </GroupBox>
        <local:TesseractView Grid.Column="1" />
    </Grid>
</Window>