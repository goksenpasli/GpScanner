<Window x:Class="GpScanner.SettingsWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converter="clr-namespace:GpScanner.Converter"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GpScanner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:GpScanner.Properties"
    xmlns:twainctrl="clr-namespace:TwainControl;assembly=TwainControl"
    xmlns:twainproperties="clr-namespace:TwainControl.Properties;assembly=TwainControl"
    xmlns:viewmodel="clr-namespace:GpScanner.ViewModel"
    Title="GPSCANNER"
    Width="800" Height="600"
    d:DataContext="{d:DesignInstance Type=viewmodel:GpScannerViewModel}"
    twainctrl:Translation.ResourceManager="{x:Static twainproperties:Resources.ResourceManager}"
    ResizeMode="NoResize" ShowInTaskbar="False" UseLayoutRounding="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <Converter:StringToQrBitmapImageConverter x:Key="StringToQrBitmapImageConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <GroupBox>
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc SETTİNGS}" />
                    <Button Background="Red"
                        Command="{Binding ResetSettings}"
                        CommandParameter="{Binding Source={x:Static twainproperties:Settings.Default}}"
                        FontWeight="Bold">
                        <Button.Content>
                            <TextBlock>
                                <Run Text="{twainctrl:Loc SETTİNGS}" />
                                <Run Text="{twainctrl:Loc RESET}" />
                            </TextBlock>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="89.6" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <ListBox VerticalContentAlignment="Center"
                    d:SelectedValue="TÜRKÇE"
                    SelectedValue="{Binding SeçiliDil}"
                    SelectedValuePath="Tag" VirtualizingPanel.ScrollUnit="Pixel">
                    <ListBox.Resources>
                        <Style BasedOn="{StaticResource ListBoxItemTemplate}" TargetType="ListBoxItem" />
                    </ListBox.Resources>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBoxItem Tag="TÜRKÇE">
                        <ListBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-Turkey.png" />
                                <TextBlock VerticalAlignment="Center" Text="TÜRKÇE" />
                            </StackPanel>
                        </ListBoxItem.Content>
                    </ListBoxItem>
                    <ListBoxItem Tag="ENGLISH">
                        <ListBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-United-States-of-America.png" />
                                <TextBlock VerticalAlignment="Center" Text="ENGLISH" />
                            </StackPanel>
                        </ListBoxItem.Content>
                    </ListBoxItem>
                    <ListBoxItem Tag="FRANÇAIS">
                        <ListBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-France.png" />
                                <TextBlock VerticalAlignment="Center" Text="FRANÇAIS" />
                            </StackPanel>
                        </ListBoxItem.Content>
                    </ListBoxItem>
                    <ListBoxItem Tag="ITALIANO">
                        <ListBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-Italy.png" />
                                <TextBlock VerticalAlignment="Center" Text="ITALIANO" />
                            </StackPanel>
                        </ListBoxItem.Content>
                    </ListBoxItem>
                    <ListBoxItem Tag="عربي">
                        <ListBoxItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="51" Height="30"
                                    RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-Saudi-Arabia.png" />
                                <TextBlock VerticalAlignment="Center" Text="عربي" />
                            </StackPanel>
                        </ListBoxItem.Content>
                    </ListBoxItem>
                </ListBox>
                <UniformGrid Grid.Row="1" Columns="3">
                    <Extensions:ButtonedTextBox VerticalContentAlignment="Center"
                        Description="{twainctrl:Loc FILE}"
                        IsReadOnly="True" ResetButtonVisibility="Collapsed"
                        Text="{Binding DatabaseFile, Mode=OneWay, Source={x:Static properties:Settings.Default}}" />
                    <Button Command="{Binding ChangeDataFolder}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="24" Height="24">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Imageres.dll" />
                                        <Binding Source="8" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc FILE}" />
                        </StackPanel>
                    </Button>
                    <CheckBox VerticalAlignment="Center"
                        Content="{twainctrl:Loc PDFTRACK}"
                        IsChecked="{Binding WatchFolderPdfFileChange, Mode=TwoWay, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding AnyDataExists}" />
                </UniformGrid>
                <GroupBox Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="3" />
                            <ColumnDefinition Width="160" />
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15.2" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox VerticalAlignment="Center"
                                    Content="{twainctrl:Loc QRDETECT}"
                                    IsChecked="{Binding DetectBarCode}" />
                                <CheckBox VerticalAlignment="Center"
                                    Content="{twainctrl:Loc SEPERATOR}"
                                    IsChecked="{Binding DetectPageSeperator}"
                                    IsEnabled="{Binding DetectBarCode}" />
                            </StackPanel>
                            <UniformGrid Grid.Row="1" Columns="2">
                                <StackPanel>
                                    <Extensions:ButtonedTextBox Description="{twainctrl:Loc TAG}"
                                        IsEnabled="{Binding DetectPageSeperator}"
                                        OpenButtonVisibility="Collapsed"
                                        Text="{Binding PatchFileName, UpdateSourceTrigger=PropertyChanged}" />
                                    <Extensions:ButtonedTextBox Description="{twainctrl:Loc FILENAME}"
                                        IsEnabled="{Binding DetectPageSeperator}"
                                        OpenButtonVisibility="Collapsed"
                                        Text="{Binding PatchTag, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button Command="{Binding SavePatchProfile}" IsEnabled="{Binding DetectPageSeperator}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="16" Height="16">
                                                <Image.Source>
                                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                        <Binding Source="Shell32.dll" />
                                                        <Binding Source="6" />
                                                    </MultiBinding>
                                                </Image.Source>
                                            </Image>
                                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc SAVEPROFILE}" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <ListBox d:ItemsSource="{d:SampleData ItemCount=5}"
                                    IsEnabled="{Binding DetectPageSeperator}"
                                    ItemsSource="{Binding PatchCodes, Source={x:Static properties:Settings.Default}}"
                                    SelectedItem="{Binding PatchProfileName}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="1" Orientation="Horizontal">
                                                <TextBlock Margin="0,0,5,0" VerticalAlignment="Center"
                                                    Text="{Binding Mode=OneWay}" />
                                                <TextBlock>
                                                    <Hyperlink Command="{Binding DataContext.RemovePatchProfile, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding Mode=OneWay}">
                                                        <Run Text="{twainctrl:Loc DELETE}" />
                                                    </Hyperlink>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </UniformGrid>
                        </Grid>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                        </StackPanel>
                        <UniformGrid Grid.Column="2"
                            Margin="1"
                            Columns="2">
                            <Image x:Name="Img"
                                Width="80" Height="80"
                                Source="{Binding ElementName=Tb, Path=Text, Converter={StaticResource StringToQrBitmapImageConverter}, Mode=OneWay}" />
                            <UniformGrid Rows="3">
                                <Extensions:ButtonedTextBox x:Name="Tb"
                                    CopyButtonVisibility="Collapsed" OpenButtonVisibility="Collapsed" TextWrapping="Wrap" />
                                <Button Command="{Binding SaveQrImage}" CommandParameter="{Binding Path=Source, ElementName=Img, Mode=OneWay}">
                                    <Image Width="24" Height="24">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Shell32.dll" />
                                                <Binding Source="6" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                </Button>
                                <Button Command="{Binding PrintImage}" CommandParameter="{Binding Path=Source, ElementName=Img, Mode=OneWay}">
                                    <Image Width="24" Height="24">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Shell32.dll" />
                                                <Binding Source="16" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                </Button>
                            </UniformGrid>
                        </UniformGrid>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="3">
                    <UniformGrid Columns="5">
                        <TextBlock VerticalAlignment="Center">
                            <Run Text="{twainctrl:Loc FILE}" />
                            <Run Text="{twainctrl:Loc RES}" />
                        </TextBlock>
                        <ComboBox ItemStringFormat="%{0}"
                            ItemsSource="{Binding SettingsPagePictureResizeList}"
                            SelectedItem="{Binding DefaultPictureResizeRatio, Mode=TwoWay, Source={x:Static twainproperties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock VerticalAlignment="Center" Text="PDF DPI" />
                        <ComboBox ItemStringFormat="{}{0} Dpi"
                            ItemsSource="{Binding SettingsPagePdfDpiList}"
                            SelectedItem="{Binding DefaultThumbNailDpi, Mode=TwoWay, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}" />
                        <ComboBox ItemsSource="{Binding GetPreviewSize}"
                            SelectedIndex="{Binding PreviewIndex, Mode=TwoWay, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}"
                            SelectedItem="{Binding SelectedSize}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock><Run Text="{Binding Width, StringFormat=\{0\} Pixel}" /><Run Text=" " /><Run Text="X" /><Run Text=" " /><Run Text="{Binding Height, StringFormat=\{0\} Pixel}" /></TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </UniformGrid>
                </GroupBox>
                <GroupBox Grid.Row="4">
                    <UniformGrid Columns="3" IsEnabled="{Binding Path=SeçiliTarayıcı, Source={x:Static twainctrl:ToolBox.Scanner}, Converter={StaticResource NullableToBooleanConverter}}">
                        <Button Command="{Binding RegisterSti, Mode=OneWay}" IsEnabled="{Binding Source={x:Static viewmodel:GpScannerViewModel.IsAdministrator}}">
                            <StackPanel Orientation="Horizontal">
                                <Canvas Width="32" Height="32">
                                    <Image Width="32" Height="32">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="sti.dll" />
                                                <Binding Source="0" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <Image Canvas.Bottom="0"
                                        Width="16" Height="16">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="User32.dll" />
                                                <Binding Source="6" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                </Canvas>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc REGSTI}" />
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding UnRegisterSti, Mode=OneWay}" IsEnabled="{Binding Source={x:Static viewmodel:GpScannerViewModel.IsAdministrator}}">
                            <StackPanel Orientation="Horizontal">
                                <Canvas Width="32" Height="32">
                                    <Image Width="32" Height="32">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="sti.dll" />
                                                <Binding Source="0" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <Image Width="32" Height="32">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Shell32.dll" />
                                                <Binding Source="131" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <Image Canvas.Bottom="0"
                                        Width="16" Height="16">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="User32.dll" />
                                                <Binding Source="6" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                </Canvas>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc UNREGSTI}" />
                            </StackPanel>
                        </Button>
                        <ListBox Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            SelectedIndex="{Binding ButtonScanMode, Mode=TwoWay, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}">
                            <ListBox.Resources>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <RadioButton VerticalAlignment="Center" VerticalContentAlignment="Center"
                                                    Content="{TemplateBinding ContentPresenter.Content}"
                                                    IsChecked="{Binding IsSelected, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.Resources>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBoxItem HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"
                                Content="{twainctrl:Loc SCAN}" />
                            <ListBoxItem HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"
                                Content="{twainctrl:Loc FASTSCAN}"
                                IsEnabled="{Binding Path=AutoSave, Source={x:Static twainctrl:ToolBox.Scanner}}" />
                        </ListBox>
                    </UniformGrid>
                </GroupBox>
                <GroupBox Grid.Row="5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="{twainctrl:Loc BATCH}" />
                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding ApplyPdfSaveOcr, Source={x:Static twainctrl:ToolBox.Scanner}}">
                                <CheckBox.Content>
                                    <TextBlock>
                                        <Run Text="{twainctrl:Loc FILE}" />
                                        <Run Text="{twainctrl:Loc OCR}" />
                                    </TextBlock>
                                </CheckBox.Content>
                            </CheckBox>
                        </StackPanel>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Grid.ColumnSpan="2"
                            IsReadOnly="True"
                            Text="{Binding BatchFolder}" />
                        <Button Grid.Column="2"
                            Command="{Binding SetBatchFolder}"
                            Content="{twainctrl:Loc SRC}" />
                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <ProgressBar Foreground="{Binding ProgressBarForegroundBrush}"
                                Maximum="1"
                                Value="{Binding PdfSaveProgressValue, Source={x:Static twainctrl:ToolBox.Scanner}}" />
                            <TextBox d:Text="AutoFolder"
                                Background="{x:Null}"
                                IsReadOnly="True"
                                Text="{Binding Path=AutoFolder, Mode=OneWay, Source={x:Static twainproperties:Settings.Default}}" />
                        </Grid>
                        <Button Grid.Row="1" Grid.Column="2"
                            Command="{Binding StartBatch}"
                            Content="{twainctrl:Loc START}" />
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="6">
                    <Extensions:GraphControl Series="{Binding ChartData}" />
                </GroupBox>
            </Grid>
        </GroupBox>
        <local:TesseractView Grid.Column="1" />
    </Grid>
</Window>