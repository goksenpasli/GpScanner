<Window x:Class="GpScanner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converter="clr-namespace:GpScanner.Converter"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:PdfViewer="clr-namespace:PdfViewer;assembly=PdfViewer"
    xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:ViewModel="clr-namespace:GpScanner.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GpScanner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:GpScanner.Properties"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:tesseract="clr-namespace:Ocr;assembly=Ocr"
    xmlns:twainctrl="clr-namespace:TwainControl;assembly=TwainControl"
    xmlns:twainproperties="clr-namespace:TwainControl.Properties;assembly=TwainControl"
    x:Name="Window"
    Title="GPSCANNER"
    d:DataContext="{d:DesignInstance Type={x:Type ViewModel:GpScannerViewModel}}"
    d:Height="600"
    d:Width="1280"
    twainctrl:Translation.ResourceManager="{x:Static twainproperties:Resources.ResourceManager}"
    Closing="Window_Closing"
    ContentRendered="MW_ContentRendered"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Key="F"
            Command="{Binding FocusControl}"
            CommandParameter="{Binding ElementName=TbSearch}"
            Modifiers="Ctrl" />
        <KeyBinding Key="F1" Command="{Binding OpenHelpDialog, ElementName=twainCtrl}" />
        <KeyBinding Key="S"
            Command="{Binding ScanImage, ElementName=twainCtrl}"
            Modifiers="Alt" />
        <KeyBinding Key="F"
            Command="{Binding FastScanImage, ElementName=twainCtrl}"
            Modifiers="Alt" />
        <KeyBinding Key="S"
            Command="{Binding SeçiliDirektPdfKaydet, ElementName=twainCtrl}"
            Modifiers="Ctrl+Shift" />
        <KeyBinding Key="S"
            Command="{Binding SaveSelectedFilesPdfFile, ElementName=twainCtrl}"
            Modifiers="Ctrl" />
        <KeyBinding Key="O"
            Command="{Binding LoadImage, ElementName=twainCtrl}"
            Modifiers="Ctrl" />
        <KeyBinding Key="A"
            Command="{Binding Tümünüİşaretle, ElementName=twainCtrl}"
            Modifiers="Ctrl" />
        <KeyBinding Key="Delete" Command="{Binding SeçiliListeTemizle, ElementName=twainCtrl}" />
        <KeyBinding Key="Delete"
            Command="{Binding ListeTemizle, ElementName=twainCtrl}"
            Modifiers="Shift" />
        <KeyBinding Key="V"
            Command="{Binding InsertClipBoardImage, ElementName=twainCtrl}"
            Modifiers="Ctrl" />
    </Window.InputBindings>
    <Window.Resources>
        <ViewModel:FoldEffect x:Key="Fold"
            PresentationOptions:Freeze="true"
            FoldAmount="{Binding Fold}" />
        <ViewModel:RippleEffect x:Key="Ripple"
            PresentationOptions:Freeze="true"
            Progress="{Binding Ripple}" />
        <ViewModel:MirrorAngleEffect x:Key="Mirror"
            PresentationOptions:Freeze="true"
            RelativeHeight="{Binding Mirror}" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Converter:StringToQrBitmapImageConverter x:Key="StringToQrBitmapImageConverter" />
        <Extensions:StringNullableToBooleanConverter x:Key="StringNullableToBooleanConverter" />
        <Converter:SelectedSizeToCacheLengthConverter x:Key="SelectedSizeToCacheLengthConverter" />
        <Extensions:FilePathToFileDescriptionConverter x:Key="FilePathToFileDescriptionConverter" />
        <Converter:MonthContributionDataFileNameConverter x:Key="MonthContributionDataFileNameConverter" />
        <Converter:NumberRangeToColorConverter x:Key="NumberRangeToColorConverter"
            MaxNumber="{Binding Source={x:Static sys:Environment.ProcessorCount}}"
            MinNumber="1" />
        <Converter:NumberRangeToColorConverter x:Key="ComboBoxNumberRangeToColorConverter"
            MaxNumber="100"
            MinNumber="5" />
        <Converter:NumberRangeToColorConverter x:Key="UpdateNumberRangeToColorConverter"
            MaxNumber="120"
            MinNumber="1" />
        <Converter:NumberRangeToColorConverter x:Key="ComboBoxPdfNumberRangeToColorConverter"
            MaxNumber="1200"
            MinNumber="12" />
        <CollectionViewSource x:Key="Veriler" Source="{Binding Dosyalar}" />
        <CollectionViewSource x:Key="Reminder" Source="{Binding ScannerData.Reminder}" />
        <CollectionViewSource x:Key="GörülenReminder" Source="{Binding ScannerData.GörülenReminder}" />
        <Style x:Key="ListBoxAnimationStyle" TargetType="{x:Type ListBox}">
            <Setter Property="BorderBrush" Value="Transparent" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding ListBoxBorderAnimation}" Value="true">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard x:Name="Sb">
                            <Storyboard RepeatBehavior="Forever">
                                <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                    To="Red"
                                    Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding ListBoxBorderAnimation}" Value="false">
                    <DataTrigger.EnterActions>
                        <StopStoryboard BeginStoryboardName="Sb" />
                        <RemoveStoryboard BeginStoryboardName="Sb" />
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BorderAnimationStyle" TargetType="{x:Type Border}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding BorderAnimation}" Value="true">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard x:Name="Sb">
                            <Storyboard Timeline.DesiredFrameRate="12">
                                <DoubleAnimationUsingKeyFrames RepeatBehavior="1" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="5" />
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="-5" />
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.9" Value="0" />
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding BorderAnimation}" Value="false">
                    <DataTrigger.EnterActions>
                        <StopStoryboard BeginStoryboardName="Sb" />
                        <RemoveStoryboard BeginStoryboardName="Sb" />
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ContentToggleButtonAnimationStyle" TargetType="{x:Type Extensions:ContentToggleButton}">
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Foreground" Value="GreenYellow" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding BarcodeList.Count}" Value="0">
                    <Setter Property="Foreground" Value="White" />
                </DataTrigger>
                <DataTrigger Binding="{Binding ListBoxBorderAnimation}" Value="true">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard x:Name="Sb">
                            <Storyboard RepeatBehavior="Forever">
                                <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                    To="Red"
                                    Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding ListBoxBorderAnimation}" Value="false">
                    <DataTrigger.EnterActions>
                        <StopStoryboard BeginStoryboardName="Sb" />
                        <RemoveStoryboard BeginStoryboardName="Sb" />
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource BorderBackground}" />
        </Style>
        <Style TargetType="{x:Type RepeatButton}">
            <Setter Property="Background" Value="{StaticResource BorderBackground}" />
        </Style>
        <Style TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="{StaticResource BorderBackground}" />
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Template" Value="{StaticResource ComboBoxStyle}" />
        </Style>
        <Style TargetType="{x:Type Extensions:ContentToggleButton}">
            <Setter Property="Background" Value="{StaticResource BorderBackground}" />
        </Style>
        <Style TargetType="{x:Type Extensions:SplitButton}">
            <Setter Property="Background" Value="{StaticResource BorderBackground}" />
        </Style>
    </Window.Resources>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="{Binding Scanner.ProgressState, ElementName=twainCtrl}" ProgressValue="{Binding Scanner.PdfSaveProgressValue, ElementName=twainCtrl, Mode=OneWay}">
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfo Command="{Binding FastScanImage, Mode=OneWay, ElementName=twainCtrl}" Description="{twainctrl:Loc FASTSCAN}">
                    <ThumbButtonInfo.ImageSource>
                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                            <Binding Source="Shell32.dll" />
                            <Binding Source="201" />
                        </MultiBinding>
                    </ThumbButtonInfo.ImageSource>
                </ThumbButtonInfo>
                <ThumbButtonInfo Command="{Binding LoadImage, Mode=OneWay, ElementName=twainCtrl}" Description="{twainctrl:Loc FILE}">
                    <ThumbButtonInfo.ImageSource>
                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                            <Binding Source="Shell32.dll" />
                            <Binding Source="139" />
                        </MultiBinding>
                    </ThumbButtonInfo.ImageSource>
                </ThumbButtonInfo>
                <ThumbButtonInfo Command="{Binding InsertClipBoardImage, Mode=OneWay, ElementName=twainCtrl}" Description="{twainctrl:Loc PASTE}">
                    <ThumbButtonInfo.ImageSource>
                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                            <Binding Source="Shell32.dll" />
                            <Binding Source="260" />
                        </MultiBinding>
                    </ThumbButtonInfo.ImageSource>
                </ThumbButtonInfo>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Grid d:Effect="{x:Null}">
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=AnimationType, Source={x:Static properties:Settings.Default}}" Value="0">
                        <Setter Property="Effect" Value="{StaticResource Fold}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=AnimationType, Source={x:Static properties:Settings.Default}}" Value="1">
                        <Setter Property="Effect" Value="{StaticResource Ripple}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=AnimationType, Source={x:Static properties:Settings.Default}}" Value="2">
                        <Setter Property="Effect" Value="{StaticResource Mirror}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding MainWindowGuiControlLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:Width="3*" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="{Binding MainWindowDocumentGuiControlLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:Width="2*" />
        </Grid.ColumnDefinitions>
        <twainctrl:TwainCtrl x:Name="twainCtrl" twainctrl:Policy.PolicyName="TwainCtrl" />
        <GridSplitter Grid.Column="1"
            Width="3"
            HorizontalAlignment="Stretch"
            Background="{StaticResource GroupBoxBackGround}"
            ToolTip="{twainctrl:Loc SPLITTERTOOLTIP}">
            <GridSplitter.InputBindings>
                <MouseBinding Command="{Binding GridSplitterMouseDoubleClick}" Gesture="LeftDoubleClick" />
                <MouseBinding Command="{Binding GridSplitterMouseRightButtonDown}" Gesture="RightClick" />
            </GridSplitter.InputBindings>
        </GridSplitter>
        <GroupBox Grid.Column="2" twainctrl:Policy.PolicyName="DocumentPanel">
            <GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <UniformGrid Columns="2">
                        <Button twainctrl:Policy.PolicyName="OpenSettings" Command="{Binding OpenSettings}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="21" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc SETTİNGS}" />
                            </StackPanel>
                        </Button>
                        <ToggleButton x:Name="TbExpandDocument"
                            Command="{Binding ModifyGridWidth}"
                            IsChecked="{Binding DocumentPanelIsExpanded}">
                            <ToggleButton.Style>
                                <Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="{x:Type ToggleButton}">
                                    <Style.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="CommandParameter" Value="1" />
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <Image Width="16"
                                                        Height="16"
                                                        RenderTransformOrigin="0.5,0.5">
                                                        <Image.RenderTransform>
                                                            <TransformGroup>
                                                                <RotateTransform Angle="180" />
                                                            </TransformGroup>
                                                        </Image.RenderTransform>
                                                        <Image.Source>
                                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                <Binding Source="Shell32.dll" />
                                                                <Binding Source="252" />
                                                            </MultiBinding>
                                                        </Image.Source>
                                                    </Image>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="False">
                                            <Setter Property="CommandParameter" Value="0" />
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <Image Width="16" Height="16">
                                                        <Image.Source>
                                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                <Binding Source="Shell32.dll" />
                                                                <Binding Source="252" />
                                                            </MultiBinding>
                                                        </Image.Source>
                                                    </Image>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </UniformGrid>
                    <Extensions:ContentToggleButton Grid.Column="1"
                        HorizontalAlignment="Right"
                        ArrowVisibility="Collapsed"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}">
                        <Image Width="16" Height="16">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                    <Binding Source="Comres.dll" />
                                    <Binding Source="11" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                        <Extensions:ContentToggleButton.OverContent>
                            <GroupBox>
                                <FlowDocumentScrollViewer Width="250" VerticalScrollBarVisibility="Disabled">
                                    <FlowDocument>
                                        <Paragraph>
                                            <TextBlock>
                                                <Run BaselineAlignment="Center" Text=".NET Framework 4.7.2" />
                                                <InlineUIContainer BaselineAlignment="Center">
                                                    <Image Width="16" Height="16">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Source">
                                                                    <Setter.Value>
                                                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                            <Binding Source="Comres.dll" />
                                                                            <Binding Source="10" />
                                                                        </MultiBinding>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding NetFxVersionSupported}" Value="true">
                                                                        <Setter Property="Source">
                                                                            <Setter.Value>
                                                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                                    <Binding Source="Comres.dll" />
                                                                                    <Binding Source="8" />
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                </InlineUIContainer>
                                            </TextBlock>
                                            <TextBlock>
                                                <Run BaselineAlignment="Center" Text="Visual C++ 2019 Runtime" />
                                                <InlineUIContainer BaselineAlignment="Center">
                                                    <Image Width="16" Height="16">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Source">
                                                                    <Setter.Value>
                                                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                            <Binding Source="Comres.dll" />
                                                                            <Binding Source="10" />
                                                                        </MultiBinding>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding TesseractVisualCRuntimeInstalled}" Value="true">
                                                                        <Setter Property="Source">
                                                                            <Setter.Value>
                                                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                                    <Binding Source="Comres.dll" />
                                                                                    <Binding Source="8" />
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                </InlineUIContainer>
                                            </TextBlock>
                                        </Paragraph>
                                    </FlowDocument>
                                </FlowDocumentScrollViewer>
                            </GroupBox>
                        </Extensions:ContentToggleButton.OverContent>
                    </Extensions:ContentToggleButton>
                </Grid>
            </GroupBox.Header>
            <TabControl Background="{StaticResource BorderBackground}">
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Width="16" Height="16">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="TimeDate.cpl" />
                                        <Binding Source="0" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc CALENDAR}" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <StackPanel Background="{StaticResource BorderBackground}" Orientation="Horizontal">
                                <Extensions:SplitButton twainctrl:Policy.PolicyName="Tümünüİşaretle"
                                    BorderBrush="Cyan"
                                    Command="{Binding Tümünüİşaretle}">
                                    <Extensions:SplitButton.InternalContent>
                                        <StackPanel Orientation="Horizontal">
                                            <Button twainctrl:Policy.PolicyName="TümününİşaretiniKaldır"
                                                BorderBrush="Cyan"
                                                Command="{Binding TümününİşaretiniKaldır}">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="32"
                                                        Height="32"
                                                        Source="/TwainControl;component/Icons/none.png" />
                                                    <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc NONE}" />
                                                </StackPanel>
                                            </Button>
                                            <Button twainctrl:Policy.PolicyName="Tersiniİşaretle"
                                                BorderBrush="Cyan"
                                                Command="{Binding Tersiniİşaretle}">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="32"
                                                        Height="32"
                                                        Source="/TwainControl;component/Icons/inverse.png" />
                                                    <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc REVERSE}" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Extensions:SplitButton.InternalContent>
                                    <StackPanel Orientation="Horizontal">
                                        <Canvas Width="32" Height="32">
                                            <Image Width="32"
                                                Height="32"
                                                Source="/TwainControl;component/Icons/selectall.png" />
                                            <TextBlock Canvas.Top="7"
                                                Width="32"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                d:Text="0"
                                                FontWeight="Bold"
                                                Foreground="Red"
                                                Text="{Binding CheckedPdfCount}"
                                                TextAlignment="Center" />
                                        </Canvas>
                                        <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc ALL}" />
                                    </StackPanel>
                                </Extensions:SplitButton>
                                <TextBlock VerticalAlignment="Center">
                                    <Run Text="PDF" />
                                    <Run Text="{twainctrl:Loc ALL}" />
                                    <LineBreak />
                                    <Run Text="{twainctrl:Loc PAGENUMBER}" />
                                </TextBlock>
                                <Extensions:NumericUpDown twainctrl:Policy.PolicyName="AllPdfPage"
                                    Interval="1"
                                    Minimum="1"
                                    Value="{Binding AllPdfPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <Button HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"
                                    twainctrl:Policy.PolicyName="PdfBirleştir"
                                    BorderBrush="Cyan"
                                    Command="{Binding PdfBirleştir}">
                                    <Image Width="32"
                                        Height="32"
                                        Source="{Binding Converter={StaticResource FilePathToIconConverter}, Source=.pdf}" />
                                </Button>
                                <Button HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"
                                    twainctrl:Policy.PolicyName="PdfZipBirleştir"
                                    Command="{Binding PdfZipBirleştir}">
                                    <Canvas Width="32" Height="32">
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="zipfldr.dll" />
                                                    <Binding Source="0" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock Canvas.Top="3"
                                            Canvas.Right="3"
                                            Text="ZIP" />
                                    </Canvas>
                                </Button>
                                <Extensions:ContentToggleButton Command="{Binding LoadGroupFilesMonth}"
                                    StaysOpen="True"
                                    TopMost="False">
                                    <Extensions:ContentToggleButton.OverContent>
                                        <ItemsControl ItemsSource="{Binding YearlyGroupData}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Background="{StaticResource BorderBackground}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button x:Name="Btn"
                                                                Command="{Binding DataContext.MonthZipFile, RelativeSource={RelativeSource AncestorType=UniformGrid}}"
                                                                CommandParameter="{Binding Mode=OneWay}">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image Width="32" Height="32">
                                                                        <Image.Source>
                                                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                                <Binding Source="zipfldr.dll" />
                                                                                <Binding Source="0" />
                                                                            </MultiBinding>
                                                                        </Image.Source>
                                                                    </Image>
                                                                    <TextBlock VerticalAlignment="Center">
                                                                        <Run Text="{twainctrl:Loc MONTH}" />
                                                                        <Run Text="{Binding Key, Mode=OneWay}" />
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </Button>
                                                            <TextBlock x:Name="TbView"
                                                                VerticalAlignment="Center"
                                                                FontFamily="Webdings"
                                                                FontSize="20"
                                                                Foreground="Red"
                                                                IsEnabled="{Binding ElementName=Btn, Path=IsEnabled}"
                                                                Text="N" />
                                                        </StackPanel>
                                                        <Extensions:FadedToolTipControl Background="{StaticResource BorderBackground}"
                                                            BorderBrush="{StaticResource GroupBoxBackGround}"
                                                            PopupParent="{Binding ElementName=TbView}"
                                                            Position="Bottom"
                                                            ShowCloseButton="Visible"
                                                            TimeToClose="{x:Static sys:Int32.MaxValue}"
                                                            TimeToShow="2000">
                                                            <Extensions:FadedToolTipControl.Style>
                                                                <Style TargetType="Extensions:FadedToolTipControl">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ElementName=TbView, Path=IsMouseOver}" Value="true">
                                                                            <Setter Property="Show" Value="True" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsMouseOver}" Value="true">
                                                                            <Setter Property="Show" Value="True" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Extensions:FadedToolTipControl.Style>
                                                            <Extensions:ResizablePanel Width="720"
                                                                Height="480"
                                                                MinWidth="360"
                                                                MinHeight="240"
                                                                Background="{x:Null}"
                                                                BorderBrush="Transparent">
                                                                <ListBox ItemTemplateSelector="{StaticResource DocumentViewerMonthPreviewSelector}"
                                                                    ItemsSource="{Binding Mode=OneWay, Converter={StaticResource MonthContributionDataFileNameConverter}}"
                                                                    VirtualizingPanel.CacheLengthUnit="Item"
                                                                    VirtualizingPanel.ScrollUnit="Pixel"
                                                                    VirtualizingPanel.VirtualizationMode="Recycling">
                                                                    <ListBox.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <Extensions:VirtualizingWrapPanel CanHorizontallyScroll="False"
                                                                                ItemSize="165,165"
                                                                                SpacingMode="None" />
                                                                        </ItemsPanelTemplate>
                                                                    </ListBox.ItemsPanel>
                                                                </ListBox>
                                                            </Extensions:ResizablePanel>
                                                        </Extensions:FadedToolTipControl>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Columns="1" Rows="12" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </Extensions:ContentToggleButton.OverContent>
                                </Extensions:ContentToggleButton>
                                <ToggleButton twainctrl:Policy.PolicyName="ThumbMultipleOcrEnabled" IsChecked="{Binding Path=ThumbMultipleOcrEnabled, Source={x:Static properties:Settings.Default}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <Canvas Width="32" Height="32">
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="70" />
                                                </MultiBinding>
                                            </Image.Source>
