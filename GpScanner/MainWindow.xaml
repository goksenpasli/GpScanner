                                                                    IsChecked="{Binding RegisterBatchWatcher, Source={x:Static properties:Settings.Default}}">
                                                                    <TextBlock Foreground="Blue" Text="{twainctrl:Loc APPLY}" />
                                                                    <CheckBox.Style>
                                                                        <Style TargetType="CheckBox">
                                                                            <Setter Property="IsEnabled" Value="False" />
                                                                            <Style.Triggers>
                                                                                <MultiDataTrigger>
                                                                                    <MultiDataTrigger.Conditions>
                                                                                        <Condition Binding="{Binding BatchFolder, Source={x:Static properties:Settings.Default}, Converter={StaticResource StringNullableToBooleanConverter}}" Value="true" />
                                                                                        <Condition Binding="{Binding BatchSaveFolder, Source={x:Static properties:Settings.Default}, Converter={StaticResource StringNullableToBooleanConverter}}" Value="true" />
                                                                                    </MultiDataTrigger.Conditions>
                                                                                    <Setter Property="IsEnabled" Value="True" />
                                                                                </MultiDataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </CheckBox.Style>
                                                                </CheckBox>
                                                            </UniformGrid>
                                                        </UniformGrid>
                                                        <Separator />
                                                        <TextBlock Foreground="Red"
                                                            Text="{twainctrl:Loc BATCHDESC}"
                                                            TextWrapping="Wrap" />
                                                        <Separator />
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <Extensions:ButtonedTextBox VerticalContentAlignment="Center"
                                                                CopyButtonVisibility="Collapsed"
                                                                IsReadOnly="True"
                                                                PasteButtonVisibility="Collapsed"
                                                                ResetButtonVisibility="Visible"
                                                                Text="{Binding BatchSaveFolder, UpdateSourceTrigger=PropertyChanged, Source={x:Static properties:Settings.Default}}" />
                                                            <Button Grid.Column="1" Command="{Binding SetBatchSaveFolder}">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image Width="32" Height="32">
                                                                        <Image.Source>
                                                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                                <Binding Source="Shell32.dll" />
                                                                                <Binding Source="3" />
                                                                            </MultiBinding>
                                                                        </Image.Source>
                                                                    </Image>
                                                                    <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc SAVEPDF}" />
                                                                </StackPanel>
                                                            </Button>
                                                        </Grid>
                                                    </StackPanel>
                                                    <UniformGrid Grid.Row="1" Columns="2">
                                                        <ListBox x:Name="Lb"
                                                            d:ItemsSource="{d:SampleData ItemCount=5}"
                                                            Background="{StaticResource BorderBackground}"
                                                            ItemsPanel="{StaticResource ListBoxWrapItemsPanel}"
                                                            ItemsSource="{Binding FileSystemWatcherProcessedFileList, Mode=OneWay}">
                                                            <ListBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Image Width="64"
                                                                        Height="64"
                                                                        d:Height="64"
                                                                        d:Source="{Binding Source='.pdf', Converter={StaticResource FilePathToIconConverter}}"
                                                                        d:Width="64"
                                                                        Source="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag.Result, IsAsync=True}">
                                                                        <Image.Tag>
                                                                            <MultiBinding Converter="{StaticResource PdfPageToThumbImageConverter}">
                                                                                <Binding Mode="OneWay" />
                                                                                <Binding Mode="OneWay">
                                                                                    <Binding.Source>
                                                                                        <sys:Int32>1</sys:Int32>
                                                                                    </Binding.Source>
                                                                                </Binding>
                                                                            </MultiBinding>
                                                                        </Image.Tag>
                                                                    </Image>
                                                                </DataTemplate>
                                                            </ListBox.ItemTemplate>
                                                        </ListBox>
                                                        <twainctrl:EypPdfViewer DpiListVisibility="Collapsed"
                                                            PdfFilePath="{Binding Source={x:Reference Lb}, Path=SelectedItem, Mode=OneWay}"
                                                            PdfTextContentVisibility="Collapsed"
                                                            SearchTextContentVisibility="Collapsed"
                                                            TifNavigasyonButtonEtkin="Collapsed" />
                                                    </UniformGrid>
                                                </Grid>
                                            </GroupBox>
                                        </TabItem>
                                        <TabItem Header="{twainctrl:Loc FILE}">
                                            <ItemsControl Background="{StaticResource BorderBackground}" ItemsSource="{Binding BatchImageFileExtensions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <CheckBox VerticalContentAlignment="Center"
                                                            IsChecked="{Binding Checked}"
                                                            IsEnabled="{Binding Enabled}">
                                                            <CheckBox.Content>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image Width="32"
                                                                        Height="32"
                                                                        Source="{Binding Mode=OneWay, Path=Name, Converter={StaticResource FilePathToIconConverter}}" />
                                                                    <TextBlock VerticalAlignment="Center" Text="{Binding Name, Mode=OneWay, Converter={StaticResource FilePathToFileDescriptionConverter}}" />
                                                                </StackPanel>
                                                            </CheckBox.Content>
                                                        </CheckBox>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Columns="3" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </TabItem>
                                    </TabControl>
                                    <ListBox Grid.Column="1"
                                        Width="150"
                                        HorizontalContentAlignment="Stretch"
                                        Background="{StaticResource BorderBackground}"
                                        ItemsSource="{Binding BatchTxtOcrs}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Height="20">
                                                    <ProgressBar Foreground="Purple"
                                                        Maximum="1"
                                                        Minimum="0"
                                                        Value="{Binding ProgressValue}" />
                                                    <TextBlock VerticalAlignment="Center"
                                                        Foreground="OrangeRed"
                                                        Text="{Binding FilePath, Mode=OneWay}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Button Grid.Row="1"
                                        Grid.Column="1"
                                        twainctrl:Policy.PolicyName="CancelBatchOcr"
                                        Command="{Binding CancelBatchOcr}">
                                        <Image Width="32"
                                            Height="32"
                                            HorizontalAlignment="Center"
                                            Source="/TwainControl;component/Icons/delete.png" />
                                    </Button>
                                </Grid>
                            </GroupBox>
                        </Extensions:ContentToggleButton.OverContent>
                    </Extensions:ContentToggleButton>
                    <Extensions:ContentToggleButton HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Command="{Binding LoadUnindexedFiles}">
                        <Grid>
                            <ProgressBar Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                IsIndeterminate="{Binding OcrIsBusy}" />
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="171" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="{twainctrl:Loc UNINDEXED}" />
                            </StackPanel>
                        </Grid>
                        <Extensions:ContentToggleButton.OverContent>
                            <StackPanel>
                                <UniformGrid Columns="2">
                                    <ToggleButton IsChecked="{Binding Shutdown}">
                                        <StackPanel Orientation="Horizontal">
                                            <Canvas Width="32" Height="32">
                                                <Image Width="32" Height="32">
                                                    <Image.Source>
                                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                            <Binding Source="Shell32.dll" />
                                                            <Binding Source="27" />
                                                        </MultiBinding>
                                                    </Image.Source>
                                                </Image>
                                                <Image Canvas.Right="0"
                                                    Canvas.Bottom="0"
                                                    Width="16"
                                                    Height="16"
                                                    Visibility="{Binding Shutdown, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Image.Source>
                                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                            <Binding Source="Comres.dll" />
                                                            <Binding Source="8" />
                                                        </MultiBinding>
                                                    </Image.Source>
                                                </Image>
                                            </Canvas>
                                            <TextBlock VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                Foreground="Red"
                                                Text="{twainctrl:Loc CLOSECOMP}" />
                                        </StackPanel>
                                    </ToggleButton>
                                    <ToggleButton IsChecked="{Binding OcrAllPdfPages}" ToolTip="{twainctrl:Loc OCRALL}">
                                        <ToggleButton.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="32"
                                                    Height="32"
                                                    Source="{Binding Converter={StaticResource FilePathToIconConverter}, Source=.pdf}" />
                                                <TextBlock VerticalAlignment="Center">
                                                    <Run Text="{twainctrl:Loc ALL}" />
                                                    <Run Text="PDF" />
                                                    <Run Text="{twainctrl:Loc OCR}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </ToggleButton.Content>
                                    </ToggleButton>
                                </UniformGrid>
                                <UniformGrid Width="800"
                                    Height="400"
                                    Columns="2">
                                    <GroupBox>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <ListBox x:Name="LbUnindexed"
                                                d:ItemsSource="{d:SampleData ItemCount=5}"
                                                ItemsSource="{Binding UnIndexedFiles}">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock VerticalAlignment="Center">
                                                            <InlineUIContainer BaselineAlignment="Center">
                                                                <Image Width="16"
                                                                    Height="16"
                                                                    Source="{Binding Converter={StaticResource FilePathToIconConverter}, Mode=OneWay}" />
                                                            </InlineUIContainer>
                                                            <Run BaselineAlignment="Center" Text="{Binding Mode=OneWay}" />
                                                            <Hyperlink BaselineAlignment="Center"
                                                                Command="{Binding DataContext.UnindexedFileOcr, RelativeSource={RelativeSource AncestorType=Extensions:ContentToggleButton}}"
                                                                CommandParameter="{Binding Mode=OneWay}"
                                                                TextDecorations="None">
                                                                <Image Width="16" Height="16">
                                                                    <Image.Source>
                                                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                            <Binding Source="Shell32.dll" />
                                                                            <Binding Source="171" />
                                                                        </MultiBinding>
                                                                    </Image.Source>
                                                                </Image>
                                                            </Hyperlink>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                            <Button Grid.Row="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Command="{Binding UnindexedAllFilesOcr}">
                                                <Grid>
                                                    <ProgressBar Background="{x:Null}"
                                                        BorderBrush="{x:Null}"
                                                        Maximum="1"
                                                        Value="{Binding OcrAllPdfPagesProgress}" />
                                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                        <TextBlock VerticalAlignment="Center" FontWeight="Bold">
                                                            <Run d:Text="0"
                                                                Foreground="LawnGreen"
                                                                Text="{Binding IndexedFileCount}" />
                                                            <Run Text="/" />
                                                            <Run Foreground="Red" Text="{Binding Source={x:Reference LbUnindexed}, Path=Items.Count, Mode=OneWay}" />
                                                        </TextBlock>
                                                        <Image Width="32" Height="32">
                                                            <Image.Source>
                                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                    <Binding Source="Shell32.dll" />
                                                                    <Binding Source="171" />
                                                                </MultiBinding>
                                                            </Image.Source>
                                                        </Image>
                                                        <TextBlock VerticalAlignment="Center">
                                                            <Run Text="{twainctrl:Loc ALL}" />
                                                            <Run Text="{twainctrl:Loc UNINDEXED}" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Button>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox>
                                        <ContentControl Content="{Binding SelectedItem, IsAsync=True, Mode=OneWay, Source={x:Reference LbUnindexed}}" ContentTemplateSelector="{StaticResource ThumbViewerSelector}" />
                                    </GroupBox>
                                </UniformGrid>
                            </StackPanel>
                        </Extensions:ContentToggleButton.OverContent>
                    </Extensions:ContentToggleButton>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>