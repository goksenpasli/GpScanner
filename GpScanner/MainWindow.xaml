<Window x:Class="GpScanner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:ViewModel="clr-namespace:GpScanner.ViewModel"
    xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=PresentationFramework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GpScanner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:twainctrl="clr-namespace:TwainControl;assembly=TwainControl"
    xmlns:twainproperties="clr-namespace:TwainControl.Properties;assembly=TwainControl"
    Title="GPSCANNER"
    d:DataContext="{d:DesignInstance Type=ViewModel:GpScannerViewModel}"
    d:Height="600" d:Width="1280"
    twainctrl:Translation.ResourceManager="{x:Static twainproperties:Resources.ResourceManager}"
    Closing="Window_Closing" ContentRendered="MW_ContentRendered" UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen" WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <CollectionViewSource x:Key="Veriler" Source="{Binding Dosyalar}" />
        <Style x:Key="ListBoxAnimationStyle" TargetType="{x:Type ListBox}">
            <Setter Property="BorderBrush" Value="Transparent" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding ListBoxBorderAnimation}" Value="true">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard x:Name="Sb">
                            <Storyboard RepeatBehavior="Forever">
                                <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" To="Red" Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding ListBoxBorderAnimation}" Value="false">
                    <DataTrigger.EnterActions>
                        <RemoveStoryboard BeginStoryboardName="Sb" />
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="{Binding Scanner.ProgressState, ElementName=TwainCtrl}" ProgressValue="{Binding Scanner.PdfSaveProgressValue, ElementName=TwainCtrl}" />
    </Window.TaskbarItemInfo>
    <Window.InputBindings>
        <KeyBinding Key="F1"
            Command="{Binding TesseractViewModel.TesseractDataFilesDownloadLink}"
            CommandParameter="yardım.chm" />
    </Window.InputBindings>
    <Grid>
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=(componentModel:DesignerProperties.IsInDesignMode)}" Value="False">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <ViewModel:FoldEffect FoldAmount="{Binding Fold}" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding MainWindowGuiControlLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:Width="2*" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="{Binding MainWindowDocumentGuiControlLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" d:Width="1*" />
        </Grid.ColumnDefinitions>
        <twainctrl:TwainCtrl x:Name="TwainCtrl" />
        <GridSplitter Grid.Column="1"
            Width="3"
            HorizontalAlignment="Stretch"
            Background="{StaticResource GroupBoxBackGround}"
            MouseDoubleClick="GridSplitter_MouseDoubleClick"
            MouseRightButtonDown="GridSplitter_MouseRightButtonDown"
            ToolTip="{twainctrl:Loc SPLITTERTOOLTIP}" />
        <GroupBox Grid.Column="2">
            <TabControl Background="{StaticResource BorderBackground}">
                <TabItem Header="{twainctrl:Loc CALENDAR}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="23.2" />
                            <RowDefinition />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>
                        <Extensions:ButtonedTextBox Grid.Row="1"
                            CopyButtonVisibility="Collapsed" OpenButtonVisibility="Collapsed"
                            Text="{Binding AramaMetni, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <UniformGrid Columns="3" Rows="1">
                            <Button Command="{Binding PdfBirleştir}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="32" Height="32">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Shell32.dll" />
                                                <Binding Source="68" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{twainctrl:Loc MERGE}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CheckedPdfCount}" Value="0">
                                                        <Setter Property="Text" Value="{twainctrl:Loc MERGESELECTED}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding CheckedPdfCount}" Value="1">
                                                        <Setter Property="Text" Value="{twainctrl:Loc SELECTTWOPDF}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                            <ToggleButton Command="{Binding ModifyGridWidth}">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Style.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="CommandParameter" Value="1" />
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter Property="CommandParameter" Value="0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="263" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                            </ToggleButton>
                            <Button Command="{Binding Source={x:Static ViewModel:WindowExtensions.OpenSettings}}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="21" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc SETTİNGS}" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </UniformGrid>
                        <UniformGrid Grid.Row="2" Columns="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button Command="{Binding DateBack}"
                                    Content="ç" FontFamily="Wingdings" FontSize="16" />
                                <DatePicker Grid.Column="1"
                                    DisplayDateEnd="{Binding Mode=OneWay, Source={x:Static sys:DateTime.Today}}"
                                    Language="{Binding CalendarLang}"
                                    SelectedDate="{Binding SeçiliGün}" />
                                <Button Grid.Column="2"
                                    Command="{Binding DateForward}"
                                    Content="è" FontFamily="Wingdings" FontSize="16" />
                            </Grid>
                            <Extensions:ContentToggleButton>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Height="16">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Imageres.dll" />
                                                <Binding Source="249" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <Image Width="16" Height="16">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Imageres.dll" />
                                                <Binding Source="251" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <Image Width="16" Height="16">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Imageres.dll" />
                                                <Binding Source="250" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock VerticalAlignment="Center"
                                        d:Text="0"
                                        Text="{Binding CheckedPdfCount}" />
                                </StackPanel>
                                <Extensions:ContentToggleButton.OverContent>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Command="{Binding Tümünüİşaretle}">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="32" Height="32">
                                                        <Image.Source>
                                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                <Binding Source="Imageres.dll" />
                                                                <Binding Source="249" />
                                                            </MultiBinding>
                                                        </Image.Source>
                                                    </Image>
                                                    <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc ALL}" />
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <Button Command="{Binding TümününİşaretiniKaldır}">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="32" Height="32">
                                                        <Image.Source>
                                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                <Binding Source="Imageres.dll" />
                                                                <Binding Source="250" />
                                                            </MultiBinding>
                                                        </Image.Source>
                                                    </Image>
                                                    <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc NONE}" />
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <Button Command="{Binding Tersiniİşaretle}">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="32" Height="32">
                                                        <Image.Source>
                                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                <Binding Source="Imageres.dll" />
                                                                <Binding Source="251" />
                                                            </MultiBinding>
                                                        </Image.Source>
                                                    </Image>
                                                    <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc REVERSE}" />
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </Extensions:ContentToggleButton.OverContent>
                            </Extensions:ContentToggleButton>
                            <ComboBox ItemsSource="{Binding GetPreviewSize}" SelectedItem="{Binding SelectedSize}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding Width, StringFormat={}{0} Pixel}" />
                                            <Run Text="X" />
                                            <Run Text="{Binding Height, StringFormat={}{0} Pixel}" />
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </UniformGrid>
                        <ListBox Grid.Row="3"
                            HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                            d:ItemsSource="{d:SampleData ItemCount=5}"
                            Background="{StaticResource BorderBackground}"
                            BorderThickness="2" IsSynchronizedWithCurrentItem="False"
                            ItemsSource="{Binding Mode=OneWay, Source={StaticResource Veriler}}"
                            SelectedItem="{Binding SelectedDocument, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SelectionMode="Extended"
                            Style="{StaticResource ListBoxAnimationStyle}"
                            VirtualizingPanel.CacheLength="6,6" VirtualizingPanel.CacheLengthUnit="Item"
                            VirtualizingPanel.IsVirtualizingWhenGrouping="True" VirtualizingPanel.ScrollUnit="Pixel"
                            VirtualizingPanel.VirtualizationMode="Standard">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Extensions:VirtualizingWrapPanel CanHorizontallyScroll="False"
                                        ItemSize="{Binding SelectedSize}"
                                        SpacingMode="None" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Seçili}" Value="true">
                                            <Setter Property="IsSelected" Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <CheckBox Width="{Binding DataContext.SelectedSize.Width, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    Height="{Binding DataContext.SelectedSize.Height, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                                    d:Height="50" Background="Transparent" Drop="ContentControl_Drop"
                                                    IsChecked="{Binding Seçili}">
                                                    <CheckBox.Style>
                                                        <Style TargetType="CheckBox">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Seçili}" Value="true">
                                                                    <Setter Property="BorderBrush" Value="MediumSeaGreen" />
                                                                    <Setter Property="BorderThickness" Value="3" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </CheckBox.Style>
                                                    <CheckBox.Content>
                                                        <Border Margin="1"
                                                            BorderBrush="Black" BorderThickness="1">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="19.2" />
                                                                    <RowDefinition />
                                                                </Grid.RowDefinitions>
                                                                <Extensions:ContentToggleButton Grid.Row="0"
                                                                    Margin="1"
                                                                    Command="{Binding DataContext.ReadOcrDataFile, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding Mode=OneWay}">
                                                                    <Image Width="16" Height="16">
                                                                        <Image.Source>
                                                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                                <Binding Source="Shell32.dll" />
                                                                                <Binding Source="70" />
                                                                            </MultiBinding>
                                                                        </Image.Source>
                                                                    </Image>
                                                                    <Extensions:ContentToggleButton.Style>
                                                                        <Style TargetType="Extensions:ContentToggleButton">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsChecked" Value="True">
                                                                                    <Setter Property="OverContent">
                                                                                        <Setter.Value>
                                                                                            <Extensions:ResizablePanel Width="{Binding Path=Parent.DataContext.SelectedSize.Width, Source={x:Reference TwainCtrl}}"
                                                                                                Height="{Binding Path=Parent.DataContext.SelectedSize.Height, Source={x:Reference TwainCtrl}}"
                                                                                                MinWidth="{Binding Path=Parent.DataContext.SelectedSize.Width, Source={x:Reference TwainCtrl}}"
                                                                                                MinHeight="{Binding Path=Parent.DataContext.SelectedSize.Height, Source={x:Reference TwainCtrl}}">
                                                                                                <GroupBox>
                                                                                                    <local:TranslateView ViewModel:ThumbnailTranslateViewModel.AttachedText="{Binding Parent.DataContext.FileOcrContent, RelativeSource={RelativeSource Mode=Self}}" />
                                                                                                </GroupBox>
                                                                                            </Extensions:ResizablePanel>
                                                                                        </Setter.Value>
                                                                                    </Setter>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Extensions:ContentToggleButton.Style>
                                                                </Extensions:ContentToggleButton>
                                                                <ContentControl Grid.Row="1"
                                                                    d:Width="64"
                                                                    Content="{Binding Path=FileName, IsAsync=True, Mode=OneWay}"
                                                                    ContentTemplateSelector="{StaticResource ThumbViewerSelector}" />
                                                            </Grid>
                                                        </Border>
                                                    </CheckBox.Content>
                                                </CheckBox>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                        <ListBox x:Name="QrListBox"
                            Grid.Row="4"
                            HorizontalContentAlignment="Stretch"
                            d:ItemsSource="{d:SampleData ItemCount=5}"
                            AllowDrop="True"
                            Background="{StaticResource BorderBackground}"
                            BorderThickness="2" Drop="QrListBox_Drop"
                            ItemsSource="{Binding BarcodeList}"
                            Style="{StaticResource ListBoxAnimationStyle}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="84.8" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center">
                                            <Hyperlink Command="{Binding DataContext.TesseractViewModel.TesseractDataFilesDownloadLink, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Mode=OneWay}">
                                                <Run FontFamily="Wingdings" FontSize="16" FontWeight="Bold"
                                                    Text="8" />
                                            </Hyperlink>
                                        </TextBlock>
                                        <Image Grid.Column="1"
                                            Width="80" Height="80"
                                            Source="{Binding Mode=OneWay, Converter={StaticResource StringToQrBitmapImageConverter}}"
                                            Tag="{Binding DataContext, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Window}}">
                                            <Image.ContextMenu>
                                                <ContextMenu DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Mode=Self}}">
                                                    <MenuItem Command="{Binding Tag.SaveQrImage}"
                                                        CommandParameter="{Binding Path=Source}"
                                                        Header="{twainctrl:Loc SAVESELECTED}" />
                                                </ContextMenu>
                                            </Image.ContextMenu>
                                        </Image>
                                        <Extensions:ButtonedTextBox Grid.Column="2"
                                            Height="80"
                                            IsReadOnly="True" OpenButtonVisibility="Collapsed" ResetButtonVisibility="Collapsed"
                                            Text="{Binding Mode=OneWay}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </TabItem>
                <TabItem Header="{twainctrl:Loc OCR}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35.2" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="35.2" />
                            </Grid.ColumnDefinitions>
                            <Button HorizontalContentAlignment="Stretch"
                                Command="{Binding OcrPage, Mode=OneWay}"
                                CommandParameter="{Binding ElementName=TwainCtrl, Path=DataContext}"
                                IsEnabled="{Binding OcrIsBusy, Converter={StaticResource ReverseBooleanConverter}}">
                                <Button.Content>
                                    <Grid>
                                        <ProgressBar IsIndeterminate="{Binding OcrIsBusy}" />
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <Image Width="32" Height="32">
                                                <Image.Source>
                                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                        <Binding Source="Shell32.dll" />
                                                        <Binding Source="70" />
                                                    </MultiBinding>
                                                </Image.Source>
                                            </Image>
                                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc READACTIVEPAGE}" />
                                        </StackPanel>
                                    </Grid>
                                </Button.Content>
                            </Button>
                            <Button Grid.Column="1"
                                Command="{Binding CancelOcr}"
                                IsEnabled="{Binding OcrIsBusy}">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="131" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                            </Button>
                        </Grid>
                        <GroupBox Grid.Row="1">
                            <local:TranslateView DataContext="{Binding DataContext.TranslateViewModel, RelativeSource={RelativeSource AncestorType=Window}}" />
                        </GroupBox>
                    </Grid>
                </TabItem>
            </TabControl>
        </GroupBox>
    </Grid>
</Window>