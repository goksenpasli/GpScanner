<Window x:Class="GpScanner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Extensions="clr-namespace:Extensions;assembly=Extensions"
    xmlns:ViewModel="clr-namespace:GpScanner.ViewModel"
    xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=PresentationFramework"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:GpScanner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:GpScanner.Properties"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:twainctrl="clr-namespace:TwainControl;assembly=TwainControl"
    xmlns:twainproperties="clr-namespace:TwainControl.Properties;assembly=TwainControl"
    Title="GPSCANNER"
    d:DataContext="{d:DesignInstance Type=ViewModel:GpScannerViewModel}"
    d:Height="600" d:Width="1280"
    twainctrl:Translation.ResourceManager="{x:Static twainproperties:Resources.ResourceManager}"
    Closing="Window_Closing" ContentRendered="MW_ContentRendered" UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen" WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <CollectionViewSource x:Key="Veriler" Source="{Binding Dosyalar}" />
    </Window.Resources>
    <Grid>
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=(componentModel:DesignerProperties.IsInDesignMode)}" Value="False">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <ViewModel:FoldEffect FoldAmount="{Binding Fold}" />
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <twainctrl:TwainCtrl x:Name="TwainCtrl" />
        <GridSplitter Grid.Column="1"
            Width="3"
            HorizontalAlignment="Stretch"
            Background="{StaticResource GroupBoxBackGround}" />
        <GroupBox Grid.Column="2" Margin="1,0,0,0">
            <GroupBox.Header>
                <UniformGrid Columns="2">
                    <Button Command="{Binding ChangeDataFolder}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc FILE}" />
                            <Image Width="16" Height="16">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="4" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                        </StackPanel>
                    </Button>
                    <ComboBox VerticalContentAlignment="Center"
                        SelectedValue="{Binding SeçiliDil}"
                        SelectedValuePath="Tag">
                        <ComboBoxItem Tag="TÜRKÇE">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="34" Height="20"
                                        RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-Turkey.png" />
                                    <TextBlock VerticalAlignment="Center" Text="TÜRKÇE" />
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="ENGLISH">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="34" Height="20"
                                        RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-United-States-of-America.png" />
                                    <TextBlock VerticalAlignment="Center" Text="ENGLISH" />
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="FRANÇAIS">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="34" Height="20"
                                        RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-France.png" />
                                    <TextBlock VerticalAlignment="Center" Text="FRANÇAIS" />
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="ITALIANO">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="34" Height="20"
                                        RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-Italy.png" />
                                    <TextBlock VerticalAlignment="Center" Text="ITALIANO" />
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="عربي">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="34" Height="20"
                                        RenderOptions.BitmapScalingMode="Fant" Source="/Resources/flag-of-Saudi-Arabia.png" />
                                    <TextBlock VerticalAlignment="Center" Text="عربي" />
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                    </ComboBox>
                </UniformGrid>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Expander Header="{twainctrl:Loc CALENDAR}">
                    <TabControl Height="250">
                        <TabItem Header="{twainctrl:Loc CALENDAR}">
                            <Viewbox Stretch="Fill">
                                <Calendar DisplayDateEnd="{Binding Mode=OneWay, Source={x:Static sys:DateTime.Today}}"
                                    Language="{Binding CalendarLang}"
                                    PreviewMouseUp="Calendar_PreviewMouseUp"
                                    SelectedDate="{Binding SeçiliGün}" />
                            </Viewbox>
                        </TabItem>
                        <TabItem Header="{twainctrl:Loc GRAPH}">
                            <Extensions:GraphControl Grid.Row="1" Series="{Binding ChartData}" />
                        </TabItem>
                    </TabControl>
                </Expander>
                <UniformGrid Grid.Row="1" Columns="3">
                    <Button Command="{Binding ResetFilter}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="238" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc VIEWALL}" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <ToggleButton IsChecked="{Binding Path=ShowPdfPreview}">
                        <ToggleButton.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="1" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc PREVIEWFILE}" />
                            </StackPanel>
                        </ToggleButton.Content>
                    </ToggleButton>
                    <Extensions:ContentToggleButton>
                        <Extensions:ContentToggleButton.OverContent>
                            <StackPanel Orientation="Horizontal">
                                <Canvas Width="32" Height="32"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource Tesseract}" />
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc TESSERACT}" />
                            </StackPanel>
                        </Extensions:ContentToggleButton.OverContent>
                        <Extensions:ContentToggleButton.Content>
                            <local:TesseractView Width="500" Height="350" />
                        </Extensions:ContentToggleButton.Content>
                    </Extensions:ContentToggleButton>
                </UniformGrid>
                <Extensions:ButtonedTextBox Grid.Row="2"
                    CopyButtonVisibility="Collapsed"
                    Text="{Binding AramaMetni, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <UniformGrid Grid.Row="3"
                    Columns="3" Rows="2">
                    <Button Command="{Binding Tümünüİşaretle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Imageres.dll" />
                                            <Binding Source="248" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc ALL}" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding TümününİşaretiniKaldır}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Imageres.dll" />
                                            <Binding Source="249" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc NONE}" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding Tersiniİşaretle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Imageres.dll" />
                                            <Binding Source="250" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc REVERSE}" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <CheckBox VerticalAlignment="Center"
                        Content="{twainctrl:Loc ADDOCRTODB}"
                        IsChecked="{Binding AddOcrToDataBase}"
                        ToolTip="{twainctrl:Loc ADDOCRTOOLTIP}" />
                    <CheckBox VerticalAlignment="Center"
                        Content="{twainctrl:Loc QRDETECT}"
                        IsChecked="{Binding DetectBarCode}" />
                    <CheckBox VerticalAlignment="Center"
                        Content="{twainctrl:Loc SEPERATOR}"
                        IsChecked="{Binding DetectPageSeperator}"
                        IsEnabled="{Binding DetectBarCode}" />
                </UniformGrid>
                <UniformGrid Grid.Row="4"
                    Columns="3"
                    IsEnabled="{Binding DetectPageSeperator}"
                    Rows="2">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                        Text="{twainctrl:Loc FILENAME}" />
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                        Text="{twainctrl:Loc TAG}" />
                    <ComboBox ItemsSource="{Binding PatchCodes, Source={x:Static properties:Settings.Default}}" SelectedItem="{Binding PatchProfileName}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <UniformGrid Columns="2">
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Mode=OneWay}" />
                                    <Button Background="Transparent" BorderBrush="Transparent"
                                        Command="{Binding DataContext.RemovePatchProfile, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                        CommandParameter="{Binding Mode=OneWay}"
                                        Content="{twainctrl:Loc DELETE}"
                                        FontWeight="Bold" Foreground="Red" />
                                </UniformGrid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBox Text="{Binding PatchFileName, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Text="{Binding PatchTag, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Command="{Binding SavePatchProfile}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="16" Height="16">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="6" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc SAVEPROFILE}" />
                        </StackPanel>
                    </Button>
                </UniformGrid>
                <ListBox Grid.Row="5"
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    Background="{StaticResource BorderBackground}"
                    IsSynchronizedWithCurrentItem="False"
                    ItemsSource="{Binding Mode=OneWay, Source={StaticResource Veriler}}"
                    SelectedItem="{Binding SelectedDocument, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectionMode="Extended" VirtualizingPanel.CacheLength="2,2"
                    VirtualizingPanel.CacheLengthUnit="Item" VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                    VirtualizingPanel.ScrollUnit="Item" VirtualizingPanel.VirtualizationMode="Standard">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Extensions:VirtualizingWrapPanel CanHorizontallyScroll="False" ItemSize="160,220" SpacingMode="None" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Seçili}" Value="true">
                                    <Setter Property="Background" Value="MediumSeaGreen" />
                                    <Setter Property="IsSelected" Value="True" />
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Margin" Value="2" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <StackPanel>
                                            <CheckBox VerticalContentAlignment="Center"
                                                d:Height="50" Background="Transparent"
                                                IsChecked="{Binding Seçili}"
                                                IsEnabled="{Binding FileName, Mode=OneWay, Converter={StaticResource FileNamePdfZipCheckConverter}}">
                                                <CheckBox.Style>
                                                    <Style TargetType="CheckBox">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Path=DataContext.ShowPdfPreview, RelativeSource={RelativeSource AncestorType=Window}}" Value="true">
                                                                <Setter Property="Content">
                                                                    <Setter.Value>
                                                                        <ContentControl Content="{Binding Path=FileName}" ContentTemplateSelector="{StaticResource ThumbViewerSelector}" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </CheckBox.Style>
                                            </CheckBox>
                                            <StackPanel HorizontalAlignment="Center"
                                                Background="{TemplateBinding Background}"
                                                Orientation="Horizontal">
                                                <TextBlock VerticalAlignment="Center" ToolTip="{twainctrl:Loc SHOWFOLDER}">
                                                    <Hyperlink Command="{Binding DataContext.ExploreFile, ElementName=TwainCtrl, Mode=OneWay}"
                                                        CommandParameter="{Binding Path=FileName}"
                                                        TextDecorations="None">
                                                        <Image Width="32" Height="32">
                                                            <Image.Source>
                                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                                    <Binding Source="Shell32.dll" />
                                                                    <Binding Source="4" />
                                                                </MultiBinding>
                                                            </Image.Source>
                                                        </Image>
                                                    </Hyperlink>
                                                </TextBlock>
                                                <Extensions:SplitButton Width="120"
                                                    Command="{Binding DataContext.WebAdreseGit, ElementName=TwainCtrl, Mode=OneWay}"
                                                    CommandParameter="{Binding Path=FileName}">
                                                    <Extensions:SplitButton.Content>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Image Width="32" Height="32"
                                                                Source="{Binding FileName, Converter={StaticResource FilePathToIconConverter}}" />
                                                            <TextBlock VerticalAlignment="Center" Text="{Binding Mode=OneWay, Path=FileName, Converter={StaticResource FileNameExtractConverter}}" />
                                                        </StackPanel>
                                                    </Extensions:SplitButton.Content>
                                                    <Extensions:SplitButton.InternalContent>
                                                        <Extensions:ResizablePanel Width="480" Height="360" MinWidth="480"
                                                            MinHeight="360">
                                                            <GroupBox>
                                                                <ContentPresenter Content="{Binding Path=FileName}" ContentTemplateSelector="{StaticResource ViewerSelector}" />
                                                            </GroupBox>
                                                        </Extensions:ResizablePanel>
                                                    </Extensions:SplitButton.InternalContent>
                                                </Extensions:SplitButton>
                                            </StackPanel>
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <UniformGrid Grid.Row="6"
                    Columns="2" Rows="2">
                    <Button Command="{Binding PdfBirleştir}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="32" Height="32">
                                <Image.Source>
                                    <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                        <Binding Source="Shell32.dll" />
                                        <Binding Source="68" />
                                    </MultiBinding>
                                </Image.Source>
                            </Image>
                            <TextBlock VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{twainctrl:Loc MERGE}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CheckedPdfCount}" Value="0">
                                                <Setter Property="Text" Value="{twainctrl:Loc MERGESELECTED}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CheckedPdfCount}" Value="1">
                                                <Setter Property="Text" Value="{twainctrl:Loc SELECTTWOPDF}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Button>
                    <Extensions:SplitButton HorizontalContentAlignment="Stretch"
                        Command="{Binding OcrPage, Mode=OneWay}"
                        CommandParameter="{Binding ElementName=TwainCtrl, Path=DataContext}"
                        IsEnabled="{Binding OcrIsBusy, Converter={StaticResource ReverseBooleanConverter}}"
                        IsSplitPartOpen="{Binding ScannedTextWindowOpen}">
                        <Extensions:SplitButton.Content>
                            <Grid>
                                <ProgressBar IsIndeterminate="{Binding OcrIsBusy}" />
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Image Width="32" Height="32">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="Shell32.dll" />
                                                <Binding Source="70" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc READACTIVEPAGE}" />
                                </StackPanel>
                            </Grid>
                        </Extensions:SplitButton.Content>
                        <Extensions:SplitButton.InternalContent>
                            <Extensions:ResizablePanel Width="420" Height="594" MinWidth="420"
                                MinHeight="594">
                                <GroupBox>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock>
                                            <Hyperlink Command="{Binding TesseractViewModel.TesseractDataFilesDownloadLink, Mode=OneWay}" CommandParameter="{Binding BarcodeContent}">
                                                <Run Text="QRCODE" />
                                            </Hyperlink>
                                        </TextBlock>
                                        <TextBox Grid.Row="1"
                                            IsReadOnly="True"
                                            Text="{Binding BarcodeContent, Mode=OneWay}" />
                                        <local:TranslateView Grid.Row="2" />
                                    </Grid>
                                </GroupBox>
                            </Extensions:ResizablePanel>
                        </Extensions:SplitButton.InternalContent>
                    </Extensions:SplitButton>
                    <Button Command="{Binding RegisterSti, Mode=OneWay}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Canvas Width="32" Height="32">
                                    <Image Width="32" Height="32">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="sti.dll" />
                                                <Binding Source="0" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                    <Image Canvas.Bottom="0"
                                        Width="16" Height="16">
                                        <Image.Source>
                                            <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                <Binding Source="User32.dll" />
                                                <Binding Source="6" />
                                            </MultiBinding>
                                        </Image.Source>
                                    </Image>
                                </Canvas>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc REGSTI}" />
                            </StackPanel>
                        </Button.Content>
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="{Binding UnRegisterSti, Mode=OneWay}" Header="{twainctrl:Loc UNREGSTI}">
                                    <MenuItem.Icon>
                                        <Image Width="16" Height="16">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                                    <Binding Source="Shell32.dll" />
                                                    <Binding Source="131" />
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <Button Command="{Binding SaveOcrPdf}" CommandParameter="{Binding ElementName=TwainCtrl}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                            <Binding Source="Shell32.dll" />
                                            <Binding Source="6" />
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                                <TextBlock VerticalAlignment="Center" Text="{twainctrl:Loc OCRPDFSAVE}" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </UniformGrid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>